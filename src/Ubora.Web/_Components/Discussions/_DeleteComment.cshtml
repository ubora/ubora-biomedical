@using Ubora.Web._Components.Discussions.Models

@model DeleteCommentModel

<div class="modal fade" id="removeCommentModal-@Model.CommentId" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete comment?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="@(Model.DeleteCommentActionPath)" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="CommentId" />
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <p>@Model.CommentText</p>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
                        <span class="mx-1"></span>
                        <button class="btn btn-primary" type="submit">Delete</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>