@using Ubora.Web._Components.Discussions.Models

@model EditCommentModel

<form action="@(Model.EditCommentActionPath)" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="CommentId" />
    <div class="form-group">
        <textarea class="form-control" asp-for="CommentText" placeholder="Add comment" rows="4"></textarea>
        <span asp-validation-for="CommentText"></span>
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn btn-outline-primary btn-sm" type="reset">Cancel</button>
        <span class="mx-1"></span>
        <button class="btn btn-primary btn-sm" type="submit">Save</button>
    </div>
</form>