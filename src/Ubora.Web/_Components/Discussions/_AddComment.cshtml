@using Ubora.Web._Components.Discussions.Models

@model AddCommentModel

<form id="add-comment" action="@(Model.AddCommentActionPath)" method="post" class="js-onbeforeunload">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="mb-4" asp-for="CommentText">Comment</label>
        <textarea class="form-control" asp-for="CommentText" placeholder="Add comment" rows="6"></textarea>
        <span asp-validation-for="CommentText"></span>
    </div>
    <div class="d-flex justify-content-end">
        <button class="btn btn-outline-primary" type="reset">Discard</button>
        <span class="mx-1"></span>
        <button class="btn btn-primary" type="submit">Add comment</button>
    </div>
</form>