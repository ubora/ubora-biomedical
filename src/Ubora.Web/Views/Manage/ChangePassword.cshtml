@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<section class="narrow-width">
    <h1>@ViewData["Title"]</h1>

    <form asp-controller="Manage" asp-action="ChangePassword" method="post">

        <label asp-for="OldPassword">
            Old password
            <input asp-for="OldPassword" placeholder="Old password" />
            <span asp-validation-for="OldPassword"></span>
        </label>

        <label asp-for="NewPassword">
            New password
            <input asp-for="NewPassword" placeholder="New password" />
            <span asp-validation-for="NewPassword"></span>
        </label>

        <label asp-for="ConfirmPassword">
            Confirm new password
            <input asp-for="ConfirmPassword" placeholder="Confirm new password" />
            <span asp-validation-for="ConfirmPassword"></span>
        </label>

        <button type="submit" class="button primary-button">Change password</button>
    </form>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}