@model UserProfileViewModel
@{
    ViewData["Title"] = "Edit profile";
}

<h2>@ViewData["Title"].</h2>
<p class="text-success">@ViewData["StatusMessage"]</p>

<form asp-controller="Manage" asp-action="EditProfile" asp-route-returnurl="@ViewData["ReturnUrl"]" method="POST">
        
    <div asp-validation-summary="All" class="text-danger"></div>
    <label>
        FirstName
        <input asp-for="FirstName" type="text" placeholder="Firstname">
    </label>
        
    <label>
        LastName
        <input asp-for="LastName" type="text" placeholder="Lastname">
    </label>

    <h3>Academia</h3>
    <label>
        University
        <input asp-for="University" type="text" name="" placeholder="Name of university">
    </label>

    <label>
        Degree
        <input asp-for="Degree" type="text" name="" placeholder="Held/obtaining degree">
    </label>

    <label>
        Field
        <input asp-for="Field" type="text" name="" placeholder="e.g. hardware engineering">
    </label>

    <label>
        Role
        <select name="">
            <option value="placeholder" disabled selected>I am a...</option>
            <option value="student">Student</option>
            <option value="professor">Professor</option>
            <option value="mentor">Mentor</option>
            <option value="expert">Specialist/Expert</option>
        </select>
    </label>

    <h3>Personal</h3>
    <label>
        Bio
        <textarea asp-for="Biography" name="" rows="5" placeholder="Write a few words about yourself!"></textarea>
    </label>

    <label>
        Skills
        <input asp-for="Skills" type="text" name="" placeholder="What are you good at?">
    </label>

    <button type="submit">Update profile</button>
</form>