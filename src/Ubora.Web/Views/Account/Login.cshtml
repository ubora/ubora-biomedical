@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
	ViewData["Title"] = "Sign in to UBORA";
}

<div class="row">
	<div class="medium-6 small-centered columns">
		<h2>@ViewData["Title"]</h2>
		<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="POST">
			<div asp-validation-summary="All" class="text-danger"></div>

			<label asp-for="Email">
				Email address<br>
				<small asp-validation-for="Email" class="text-danger"></small>
				<input asp-for="Email" placeholder="email@example.com" required>
			</label>

			<label asp-for="Password">
				Password<br>
				<small asp-validation-for="Password" class="text-danger"></small>
				<input asp-for="Password" placeholder="Secret passphrase" required>
			</label>

			<button class="button large expanded" type="submit">Sign in</button>
		</form>

		<div class="text-center">
			<a asp-action="ForgotPassword">Forgot password?</a>
		</div>

		<br>
		<h3>Don't have an account?</h3>
		<a class="button secondary large expanded" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Sign up</a>
	</div>
</div>

