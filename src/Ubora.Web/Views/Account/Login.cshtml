@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
	ViewData["Title"] = "Sign in to UBORA";
}

<section class="signin narrow-width">
	<h2 class="full-width">@ViewData["Title"]</h2>

	<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="POST">
	    
		<label asp-for="Email">
			Email address<br>
			<span asp-validation-for="Email"></span>
			<input asp-for="Email" placeholder="email@example.com" required>
		</label>

		<label asp-for="Password">
			Password<br>
			<span asp-validation-for="Password"></span>
			<input asp-for="Password" placeholder="Secret passphrase" required>
		</label>

		<button class="button primary-button" type="submit">Sign in</button>
		<br>
		<div class="text-center">
			<a asp-action="ForgotPassword">Forgot password?</a>
		</div>
	</form>

	<h3>Don't have an account?</h3>
	<a class="button secondary-button full-width" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Sign up</a>

</section>

@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
