<!DOCTYPE html>
<html lang="en">
<head>
    @RenderSection("Head", required: false)
    <link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet"
          asp-fallback-test-class="ql-snow"
          asp-fallback-href="~/dist/quill.snow.css">
    @{
        Html.RenderPartial("_LayoutHead");
    }

</head>

<body>
    @{
        Html.RenderPartial("_Header");
    }

    <main>
        <div class="container-fluid px-0">
            <div class="row no-gutters">
                <div class="col-xl-2 py-xl-3 px-xl-3 bg-blue color-white">
                        @Html.Partial("_LeftResourcePagesNavMenuPartial.cshtml")
                </div>
                <div class="order-lg-1 order-2 pt-xl-3 px-xl-7 px-3 pb-5  @(IsSectionDefined("Right") ? "col-lg-8 " : "col-xl-8")">
                    @RenderBody()
                </div>
                @{
                    if (IsSectionDefined("right"))
                    {
                        <div class="col-xl-2 col-lg-4 order-lg-2 order-1 py-xl-3 px-3 @(IsSectionDefined("Right") ? "border-left" : "")">

                                @RenderSection("Right", required: false)

                        </div>
                    }
                }
            </div>
        </div>
    </main>

    @{

        Html.RenderPartial("_LayoutBody");
        Html.RenderPartial("_Footer");
    }

    <script src="//cdn.quilljs.com/1.3.6/quill.js"
            asp-fallback-test="Quill"
            asp-fallback-src="~/dist/quill.min.js"></script>
    <script src="https://cdn.rawgit.com/afeld/bootstrap-toc/v1.0.0/dist/bootstrap-toc.min.js"
            asp-fallback-test="Toc"
            asp-fallback-src="~/dist/libs/bootstrap-toc.min.js"></script>
    <script src="~/dist/quill.bundle.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>