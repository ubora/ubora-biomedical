@model StepOneModel

@{
    ViewData["Title"] = "Indicate a new clinical need";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="" asp-action="">UBORA</a></li>
        <li class="breadcrumb-item"><a href="#">Biomedical clinical needs</a></li>
        <li class="breadcrumb-item active" aria-current="page">Indicate new clinical need</li>
    </ol>
</nav>

<h1 class="d-inline-block">@ViewData["Title"]</h1>

<p>Before indicating new clinical need be sure that this has not been already created. You can also check out existing projects from <a href="#">here</a>.</p>

<form asp-action="@nameof(IndicateClinicalNeedController.StepTwo)">
    <input asp-for="ClinicalNeedTag" type="hidden" />
    <input asp-for="AreaOfUsageTag" type="hidden" />
    <input asp-for="PotentialTechnologyTag" type="hidden" />
    <input asp-for="Keywords" type="hidden" />
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Give a name to the clinical need." />
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" rows="5" placeholder="Describe the clinical need in as much detail as you like."></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="d-flex justify-content-end">
        <span class="px-4 py-1">1<span class="color-grey">/2</span></span>
        <button class="btn btn-primary" type="submit">Continue</button>
    </div>
</form>