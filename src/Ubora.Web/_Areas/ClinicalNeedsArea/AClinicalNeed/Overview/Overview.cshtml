                <a href="#" class="no-underline">
                    <span>Author: John Smith</span>
                </a>
                <span class="dot mx-xl-2 mx-md-2 my-1 d-xs-none"></span>
                <span>@Model.IndicatedAt</span>
            </div>
        </div>
    </div>
    <div class="col-lg-4 pl-xl-5">
        <p>
            <span class="d-block font-weight-bold">Clinical need</span>
            <span class="d-block">@Model.ClinicalNeedTag</span>
        </p>
        <p>
            <span class="d-block font-weight-bold">Area</span>
            <span class="d-block">@Model.AreaOfUsageTag</span>
        </p>
        <p>
            <span class="d-block font-weight-bold">Technology</span>
            <span class="d-block">@Model.PotentialTechnologyTag</span>
        </p>
        <p>
            <span class="d-block font-weight-bold">Keywords</span>
            <span class="d-block">@Model.Keywords</span>
        </p>
    </div>
</div>
