        <li class="breadcrumb-item active" aria-current="page">Biomedical clinical needs</li>
    </ol>
</nav>

<h1 class="d-inline-block">@Model.Title</h1>

<div class="row mb-3">
    <div class="col-lg-8 pr-xl-5 border-right mb-lg-0 mb-sm-3">
        <div class="row">
            <div class="col-lg-12">
                @Model.Description
                <a href="#">See more..</a>
            </div>
            <div class="col-lg-12 color-grey font-size-0-8 py-3">
