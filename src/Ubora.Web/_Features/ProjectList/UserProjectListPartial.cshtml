@model Ubora.Web._Features.ProjectList.ProjectListViewModel

@if (Model.Projects.Any())
{
  <div class="row">
    <div class="col">
      <h2 class="display-4">@Model.Header</h2>
      <div class="row">

        <div class="col-md-3 my-2">
          <div class="card w-100 h-100">
            <a class="card-link h-100 d-flex justify-content-center align-items-center" asp-controller="ProjectCreation" asp-action="Create">
              <div class="card-body">
                 <div class="text-center">
                   <i class="material-icons icon-size-lg">add</i>
                   <h1 class="display-4">Create new project</h1>
                 </div>
              </div>
            </a>
          </div>
        </div>

        @foreach (var project in Model.Projects)
        {
          <div class="col-md-3 my-2">
            <div class="card w-100 h-100">
              <a href="@Url.Action("Dashboard", "Dashboard", new { projectId = project.Id })" class="card-link">

                <img class="card-img-top img-fluid w-100" src="@(string.IsNullOrEmpty(project.ImagePath)?"/images/project-default-image.png":project.ImagePath)">
                @if (project.IsInDraft)
                {
                  <p class="project-status-draft">Draft</p>
                }
                <div class="card-body">
                  <h4 class="card-title">@project.Title</h4>
                </div>
              </a>
            </div>
          </div>
        }
      </div>
    </div>
  </div>
}

else if (Model.ShowDefaultMessage)
{
  <div class="row">
    <div class="col">
      <div class="text-center">
        <h2 class="display-4">You have no projects.</h2>
        <p>Either <a asp-controller="ProjectCreation" asp-action="Create">create a new one</a> or find projects to <a asp-controller="Home" asp-action="Index" asp-area="">join</a>.</p>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-3 my-2">
      <div class="card w-100 h-100 py-5">
        <a class="card-link h-100 d-flex justify-content-center align-items-center" asp-controller="ProjectCreation" asp-action="Create">
          <div class="card-body">
             <div class="text-center">
               <i class="material-icons icon-size-lg">add</i>
               <h1 class="display-4">Create new project</h1>
             </div>
          </div>
        </a>
      </div>
    </div>
  </div>
}
