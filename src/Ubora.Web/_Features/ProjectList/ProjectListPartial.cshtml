@model Ubora.Web._Features.ProjectList.ProjectListViewModel

@if (Model.Projects.Any())
{
    <div class="infinite-scroll">
        <h2 class="display-4">@Model.Header</h2>
        <div class="post">
            <div class="row ">
                @foreach (var project in Model.Projects)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3 my-2">
                        @await Html.PartialAsync("~/_Components/ProjectCard.cshtml", model: project)
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <button class="btn btn-outline-primary view-more-button mt-3">Load more</button>
    </div>

    <div class="page-load-status text-center color-grey mt-3">
        <p class="infinite-scroll-last">End of content</p>
        <p class="infinite-scroll-error">No more pages to load</p>
    </div>
}
else
{
    if (Model.ShowProjectsNotFoundMessage)
    {
        <p class="text-center">No projects found with the given search term(s).</p>
    }
}
