@using Ubora.Web._Features.ProjectCreation
@model Ubora.Web._Features.ProjectCreation.CreateProjectViewModel

@{
    ViewData["Title"] = "Project drafting";
}

<section class="medium-width">
    <h1 class="full-width">Design planning</h1>

    <form asp-controller="ProjectCreation" asp-action="Create" method="post">

        <div class="form-input">
            <label asp-for="Title">Project title</label>
            <input asp-for="Title" placeholder="Name your project">
            <span asp-validation-for="Title"></span>
        </div>

        <h2>Design tags</h2>

        <div class="form-input">
            <label asp-for="ClinicalNeedTags">Clinical need</label>
            <select asp-for="ClinicalNeedTags">
                <option selected disabled>Select a clinical need</option>
                <option value="Pneumonia">Pneumonia</option>
                <option value="AIDS">AIDS</option>
                <option value="Movement impairment">Movement impairment</option>
                <option value="Maternal mortality">Maternal mortality</option>
                <option value="Child mortality">Child mortality</option>
                <option value="Alcholism">Alcholism</option>
                <option value="Muscular dystrophy">Muscular dystrophy</option>
            </select>
            <span asp-validation-for="ClinicalNeedTags"></span>
        </div>

        <div class="form-input">
            <label asp-for="AreaOfUsageTags">Area</label>
            <select asp-for="AreaOfUsageTags">
                <option selected disabled>Select an area of usage</option>
                <option value="Cardiology">Cardiology</option>
                <option value="Dermatology">Dermatology</option>
                <option value="Neurology">Neurology</option>
                <option value="m-Health">m-Health</option>
                <option value="e-Health">e-Health</option>
            </select>
            <span asp-validation-for="AreaOfUsageTags"></span>
        </div>

        <div class="form-input">
            <label asp-for="PotentialTechnologyTags">Technology</label>
            <select asp-for="PotentialTechnologyTags">
                <option selected disabled>Select potential technology</option>
                <option value="Active implantable device">Active implantable device</option>
                <option value="E-based technology">E-based technology</option>
                <option value="Ergonomic support">Ergonomic support</option>
                <option value="Implantable device">Implantable device</option>
                <option value="In vitro diagnostic device">In vitro diagnostic device</option>
                <option value="In vivo diagnostic device">In vivo diagnostic device</option>
                <option value="Laboratory equipment">Laboratory equipment</option>
                <option value="Mobile-based technology">Mobile-based technology</option>
                <option value="Monitoring device">Monitoring device</option>
                <option value="Other supporting equipment">Other supporting equipment</option>
                <option value="Preventive device">Preventive device</option>
                <option value="Software">Software</option>
                <option value="Surgical device">Surgical device</option>
            </select>
            <span asp-validation-for="PotentialTechnologyTags"></span>
        </div>

        <div class="form-input">
            <label asp-for="Gmdn">Project keywords</label>
            <input asp-for="Gmdn" placeholder="Describe your project with a few keywords">
            <span asp-validation-for="Gmdn"></span>
        </div>

        <div class="center-element">
            <button class="button primary-button" type="submit">Continue</button>
        </div>
    </form>
</section>
