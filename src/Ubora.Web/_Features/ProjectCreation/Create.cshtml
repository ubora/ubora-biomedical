@using Ubora.Web._Features.ProjectCreation
@model Ubora.Web._Features.ProjectCreation.CreateProjectViewModel

@{
    ViewData["Title"] = "Project drafting";
}

<section class="medium-width">
    <h1 class="full-width">Design planning</h1>

    <form asp-controller="Creation" asp-action="Create" method="post">

        <div class="form-input">
            <label asp-for="Title">Project title</label>
            <input asp-for="Title" placeholder="Name your project">
            <span asp-validation-for="Title"></span>
        </div>

        <h2>Design tags</h2>
        <div class="form-input">
            <label asp-for="ClinicalNeed">Clinical need</label>
            <select asp-for="ClinicalNeed">
                <option value="null" selected disabled>Select a clinical need</option>
                <option value="0">Pneumonia</option>
                <option value="1">AIDS</option>
                <option value="2">Movement impairment</option>
                <option value="3">Maternal mortality</option>
                <option value="4">Child mortality</option>
                <option value="5">Alcholism</option>
                <option value="6">Muscular dystrophy</option>
            </select>
            <span asp-validation-for="ClinicalNeed"></span>
        </div>

        <div class="form-input">
            <label asp-for="AreaOfUsage">Area</label>
            <select asp-for="AreaOfUsage">
                <option value="null" selected disabled>Select an area of usage</option>
                <option value="0">Cardiology</option>
                <option value="1">Dermatology</option>
                <option value="2">Neurology</option>
                <option value="3">m-Health</option>
                <option value="4">e-Health</option>
            </select>
            <span asp-validation-for="AreaOfUsage"></span>
        </div>

        <div class="form-input">
            <label asp-for="PotentialTechnology">Technology</label>
            <select asp-for="PotentialTechnology">
                <option value="null" selected disabled>Select potential technology</option>
                <option value="0">Thermometers</option>
                <option value="1">Computed tomography</option>
                <option value="2">Wheelchairs</option>
                <option value="3">Vascular draft</option>
                <option value="4">Eye drops</option>
                <option value="5">Bandages</option>
            </select>
            <span asp-validation-for="PotentialTechnology"></span>
        </div>

        <div class="form-input">
            <label asp-for="GmdnTerm">GMDN term</label>
            <input asp-for="GmdnTerm" placeholder="Will be implemented shortly!">
            <span asp-validation-for="GmdnTerm"></span>
        </div>

        <!-- <h2>Collaborators</h2>
        <div class="form-input">
            <label asp-for=""></label>
            <input asp-for="" placeholder="Find collaborators by name">
        </div> -->

        <div class="center-element">
            <button class="button primary-button" type="submit">Continue</button>
        </div>
    </form>
</section>
