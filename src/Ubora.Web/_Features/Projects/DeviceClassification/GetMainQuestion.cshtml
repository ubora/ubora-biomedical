@model Ubora.Web._Features.Projects.DeviceClassification.MainQuestionViewModel

    @{
        ViewData["Title"] = "Device classification";
    }

<link rel="stylesheet" href="/css/questionnaire.css">
<section class="medium-width questionnaire">
    <h1>Please select an option:</h1>
    <ul class="questionnaire-question-list">
        <li>
            <a class="questionnaire-question" asp-controller="DeviceClassification" asp-action="GetQuestions" asp-route-questionId="@Model.MainQuestionId" asp-route-mainQuestionId="@Model.MainQuestionId">@Model.MainQuestionText</a>
        </li>
        <li>
            <a class="questionnaire-question" asp-controller="DeviceClassification" asp-action="NextMainQuestion" asp-route-mainQuestionId="@Model.MainQuestionId">No it is not.</a>
        </li>
    </ul>
</section>
