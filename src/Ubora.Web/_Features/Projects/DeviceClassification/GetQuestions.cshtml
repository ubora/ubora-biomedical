@using Ubora.Web._Features.Projects.DeviceClassification
@model QuestionsViewModel

@{
    ViewData["Title"] = "Device classification";
}

<link rel="stylesheet" href="/css/questionnaire.css">
<section class="medium-width">
    <h1>Please select an option:</h1>
    <ul class="questionnaire_list">
        @foreach (var question in Model.Questions)
        {
            <li class="questionnaire_item">
                @Html.Partial("AnswerPartial", new AnswerViewModel { QuestionText = question.Text, MainQuestionId = Model.MainQuestionId, NextQuestionId = question.Id })
            </li>
        }
        <li class="questionnaire_item">
            <a class="questionnaire_question" asp-controller="DeviceClassification" asp-action="NextMainQuestion" asp-route-mainQuestionId="@Model.MainQuestionId">No it is not.</a>
        </li>
    </ul>
</section>
