@using Ubora.Web._Features.Projects.DeviceClassification.ViewModels

@model SpecialSubQuestionsViewModel

@{
    ViewData["Title"] = "Device classification";
}

<link rel="stylesheet" href="/css/questionnaire.css">
<section class="medium-width">
    <h1>Please select an option:</h1>
    <ul class="questionnaire_list">
        @foreach (var question in Model.Questions)
        {
            <li class="questionnaire_item">
                @Html.Partial("SpecialAnswerPartial", new SpecialAnswerViewModel { QuestionText = question.Text, MainQuestionId = Model.MainQuestionId, NextQuestionId = question.Id })
            </li>
        }
        <li class="questionnaire_item">
            <a class="questionnaire_question" asp-controller="DeviceClassification" asp-action="NextSpecialMainQuestion" asp-route-currentSpecialMainQuestionId="@Model.MainQuestionId">NOT APPLICABLE</a>
        </li>
    </ul>
    @if (Model.Notes.Any())
    {
        <ul>
            @foreach (var note in Model.Notes)
            {
                <li><pre style="width:400px; white-space: pre-wrap;">@note</pre></li>
            }
        </ul>
    }
</section>