@model Ubora.Web._Features.Projects.Mentors.ProjectMentorInvitationNotificationViewModel

@if (!Model.IsHistory)
{
    var isUnreadCss = Model.IsUnread ? "notification--unread" : "";

    <div class="notification @isUnreadCss">
        <div class="notification-container">
            <p class="notification--message">
                You have been asked to mentor project
                <a asp-controller="Dashboard" asp-action="Dashboard" asp-route-projectId="@Model.ProjectId">@Model.ProjectTitle</a>
            </p>
            <form class="notification--controls" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="InviteId" />
                <div class="form-input notification-action">
                    <button class="button secondary-button small-button" type="submit" asp-controller="Notifications" asp-action="Decline">Decline</button>
                </div>
                <div class="form-input notification-action">
                    <button class="button secondary-button small-button" type="submit" asp-controller="Notifications" asp-action="Accept">Accept</button>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <p>
        You were asked to join project <a asp-controller="Dashboard" asp-action="Dashboard" asp-route-projectId="@Model.ProjectId">@Model.ProjectTitle</a>.
        You
        @if (Model.WasAccepted)
        {
            <b>accepted</b><span>&#46;</span>
        }
        else
        {
            <b>declined</b><span>&#46;</span>
        }
    </p>
}