@using Ubora.Web._Features.Projects.Workpackages
@model Ubora.Web._Features.Projects.ApplicableRegulations.NextQuestionViewModel

<div class="container-fluid">
  <div class="row mt-4">
    <div class="col-sm-12 col-md-4">
      @await Component.InvokeAsync(typeof(WorkpackageListOverviewViewComponent))
    </div>
    <div class="col-sm-12 col-md-8 d-flex flex-column align-items-center">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>

      <h2>@Model.Text</h2>

      <form method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="QuestionnaireId" />

        <button class="btn btn-secondary-ghost btn-lg" type="submit" asp-action="AnswerYes">Yes</button>
        <button class="btn btn-secondary-ghost btn-lg" type="submit" asp-action="AnswerNo">No</button>
      </form>

      <div class="justify-content-start my-4">
        @if (!string.IsNullOrEmpty(Model.Note))
        {
          <h3>Notes</h3>
          <p>@Model.Note</p>
        }
      </div>
    </div>
  </div>
</div>
