@model Ubora.Web._Features.Projects.Workpackages.SideMenu.CollapseMenuItem

<li id="@Model.Id">
    <span class="d-flex align-items-center">
        <a href="javascript:void(0)" data-toggle="collapse" aria-expanded="@Model.IsSelected.ToString().ToLower()" data-target=".@Model.InnerMenuItemsId" class="sidemenu-collapse @(Model.ATagClass)">
            <span>@Model.DisplayName</span>
        </a>
    </span>

    @if (Model.RenderInnerMenuItems)
    {
        <ul class="collapse @(Model.IsSelected ? "show" : "") @(Model.CssClassForItemsBelow) @Model.InnerMenuItemsId">
            @foreach (var innerMenuItem in Model.InnerMenuItems)
            {
                @Html.Partial("~/_Features/Projects/Workpackages/SideMenu/_SideMenuItemPartial.cshtml", innerMenuItem);
            }
        </ul>
    }
</li>