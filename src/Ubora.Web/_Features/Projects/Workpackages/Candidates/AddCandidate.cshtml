@using Ubora.Web._Features.Projects.Workpackages
@using Ubora.Web._Features.Projects.Workpackages.Candidates
@model Ubora.Web._Features.Projects.Workpackages.Candidates.AddCandidateViewModel

<div class="container-fluid my-4">
    <div class="row">

        <div class="col-lg-3">
            @await Component.InvokeAsync(typeof(WorkpackageListOverviewViewComponent))
        </div>

        <div class="col-lg-9 pr-5">
            <h2>Add candidate</h2>

            <form asp-controller="Candidates" asp-action="AddCandidate" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name">Candidate name</label>
                    <input class="form-control" asp-for="Name" placeholder="Name which univocally identifies the proposed conceptual design">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input class="form-control" asp-for="Description" placeholder="Describe the conceptual design highlighting the undelying ideas, the strenghts and the weakness">
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image">Image</label>
                    <label class="text-muted">Recommended image size is 1920x1285 px. The given image will be cropped and resized to 1500x1125 and 400x300 pixel images. Image has to be less than 4 MB</label>
                    <input class="form-control" type="file" asp-for="Image">
                    <span asp-validation-for="Image"></span>
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-secondary-ghost" asp-controller="Candidates" asp-action="Voting">Discard</a>
                    <span class="mx-1"></span>
                    <button class="btn btn-primary" type="submit">Save changes</button>
                </div>
            </form>

        </div>

    </div>
</div>
