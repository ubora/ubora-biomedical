@using Ubora.Web._Features.Projects.Workpackages.Candidates
@model Ubora.Web._Features.Projects.Workpackages.Candidates.EditCommentViewModel 

<form asp-controller="Candidates" asp-action="EditComment" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CandidateId" />
    <div class="form-group">
        <textarea class="form-control" asp-for="CommentText" placeholder="Add comment" rows="4"></textarea>
        <span asp-validation-for="CommentText"></span>
    </div>
    <div class="d-flex justify-content-center">
        <a class="btn btn-outline-primary btn-sm" asp-action="Candidate" asp-controller="Candidates" asp-route-candidateId="@Model.CandidateId">Cancel</a>
        <span class="mx-1"></span>
        <button class="btn btn-primary btn-sm" type="submit">Save</button>
    </div>
</form>