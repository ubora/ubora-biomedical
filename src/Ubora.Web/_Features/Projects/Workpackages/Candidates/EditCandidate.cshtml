@model Ubora.Web._Features.Projects.Workpackages.Candidates.EditCandidateViewModel

<div class="col-lg-9 pr-5">
    <h2>Candidate description</h2>
    <form asp-controller="Candidates" asp-action="EditCandidate" method="post" enctype="multipart/form-data">
        @Html.HiddenFor(m => m.Id)
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title">Candidate name</label>
            <input class="form-control" asp-for="Title" placeholder="Name of the candidate">
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input class="form-control w-100" asp-for="Description" rows="1" placeholder="Describe your candidate..">
            <span asp-validation-for="Description"></span>
        </div>
        <div class="d-flex justify-content-center">
            <a class="btn btn-secondary-ghost" asp-controller="Candidates" asp-action="Candidate" asp-route-candidateId="@Model.Id">Discard</a>
            <span class="mx-1"></span>
            <button class="btn btn-primary" type="submit">Save changes</button>
        </div>
    </form>
</div>
