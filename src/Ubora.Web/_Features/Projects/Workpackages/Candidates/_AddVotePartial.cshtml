@using Ubora.Web._Features.Projects.Workpackages.Candidates
@model Ubora.Web._Features.Projects.Workpackages.Candidates.AddVoteViewModel

<div class="row">
    <div class="col-lg-12">
        <h2 class="display-5 mb-4">Cast your vote</h2>
    </div>
    <div class="col-lg-9 col-md-9">

        <form asp-action="AddVote" asp-controller="Candidates" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CandidateId" />

            <div class="table-responsive">
                <table class="table table-add-vote">
                    <tbody>
                        <tr class="rating">
                            <td>
                                <input asp-for="Functionality" id="rating15" type="radio" value="1" />
                                <label for="rating15" id="Functionality1" class="circle vote-number  d-flex align-items-center justify-content-center">1</label>
                            </td>
                            <td>
                                <input asp-for="Functionality" id="rating14" type="radio" value="2" />
                                <label for="rating14" id="Functionality2" class="circle vote-number  d-flex align-items-center justify-content-center">2</label>
                            </td>
                            <td>
                                <input asp-for="Functionality" id="rating13" type="radio" value="3" />
                                <label for="rating13" id="Functionality3" class="circle vote-number  d-flex align-items-center justify-content-center">3</label>
                            </td>
                            <td>
                                <input asp-for="Functionality" id="rating12" type="radio" value="4" />
                                <label for="rating12" id="Functionality4" class="circle vote-number  d-flex align-items-center justify-content-center">4</label>
                            </td>
                            <td>
                                <input asp-for="Functionality" id="rating11" type="radio" value="5" />
                                <label for="rating11" id="Functionality5" class="circle vote-number  d-flex align-items-center justify-content-center">5</label>
                            </td>
                            <th scope="row"><div class="d-flex align-items-left">Functionality</div></th>
                        </tr>
                        <tr class="rating">
                            <td>
                                <input asp-for="Performace" id="rating25" type="radio" value="1" />
                                <label for="rating25" id="Performace1" class=" circle vote-number d-flex align-items-center justify-content-center">1</label>
                            </td>
                            <td>
                                <input asp-for="Performace" id="rating24" type="radio" value="2" />
                                <label for="rating24" id="Performace2" class=" circle vote-number d-flex align-items-center justify-content-center">2</label>
                            </td>
                            <td>
                                <input asp-for="Performace" id="rating23" type="radio" value="3" />
                                <label for="rating23" id="Performace3" class=" circle vote-number d-flex align-items-center justify-content-center">3</label>
                            </td>
                            <td>
                                <input asp-for="Performace" id="rating22" type="radio" value="4" />
                                <label for="rating22" id="Performace4" class=" circle vote-number d-flex align-items-center justify-content-center">4</label>
                            </td>
                            <td>
                                <input asp-for="Performace" id="rating21" type="radio" value="5" />
                                <label for="rating21" id="Performace5" class=" circle vote-number d-flex align-items-center justify-content-center">5</label>
                            </td>
                            <th scope="row"><div class="d-flex align-items-left">Performace</div></th>
                        </tr>
                        <tr class="rating">
                            <td>
                                <input asp-for="Usability" id="rating35" type="radio" value="1" />
                                <label for="rating35" id="Usability1" class=" circle vote-number d-flex align-items-center justify-content-center">1</label>
                            </td>
                            <td>
                                <input asp-for="Usability" id="rating34" type="radio" value="2" />
                                <label for="rating34" id="Usability2" class=" circle vote-number d-flex align-items-center justify-content-center">2</label>
                            </td>
                            <td>
                                <input asp-for="Usability" id="rating33" type="radio" value="3" />
                                <label for="rating33" id="Usability3" class=" circle vote-number d-flex align-items-center justify-content-center">3</label>
                            </td>
                            <td>
                                <input asp-for="Usability" id="rating32" type="radio" value="4" />
                                <label for="rating32" id="Usability4" class=" circle vote-number d-flex align-items-center justify-content-center">4</label>
                            </td>
                            <td>
                                <input asp-for="Usability" id="rating31" type="radio" value="5" />
                                <label for="rating31" id="Usability5" class=" circle vote-number d-flex align-items-center justify-content-center">5</label>
                            </td>
                            <th scope="row"><div class="d-flex align-items-left">Usability</div></th>
                        </tr>
                        <tr class="rating">
                            <td>
                                <input asp-for="Safety" id="rating45" type="radio" value="1" />
                                <label for="rating45" id="Safety1" class=" circle vote-number d-flex align-items-center justify-content-center">1</label>
                            </td>
                            <td>
                                <input asp-for="Safety" id="rating44" type="radio" value="2" />
                                <label for="rating44" id="Safety2" class=" circle vote-number d-flex align-items-center justify-content-center">2</label>
                            </td>
                            <td>
                                <input asp-for="Safety" id="rating43" type="radio" value="3" />
                                <label for="rating43" id="Safety3" class=" circle vote-number d-flex align-items-center justify-content-center">3</label>
                            </td>
                            <td>
                                <input asp-for="Safety" id="rating42" type="radio" value="4" />
                                <label for="rating42" id="Safety4" class=" circle vote-number d-flex align-items-center justify-content-center">4</label>
                            </td>
                            <td>
                                <input asp-for="Safety" id="rating41" type="radio" value="5" />
                                <label for="rating41" id="Safety5" class=" circle vote-number d-flex align-items-center justify-content-center">5</label>
                            </td>
                            <th scope="row"><div class="d-flex align-items-left">Safety</div></th>
                        </tr>
                    </tbody>
                </table>
            </div>
            <span asp-validation-for="Functionality"></span>
            <span asp-validation-for="Performace"></span>
            <span asp-validation-for="Usability"></span>
            <span asp-validation-for="Safety"></span>
            <span class="d-flex align-self-center">
                <button class="btn btn-primary" type="submit">Vote</button>
            </span>
        </form>
    </div>
</div>