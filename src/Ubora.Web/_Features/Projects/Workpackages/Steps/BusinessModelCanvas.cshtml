@using Ubora.Web._Features.Projects._Shared
@using Ubora.Web._Features.Projects.Workpackages.Steps

@model BusinessModelCanvasReadViewModel

@{
    var canWorkOnProjectContent = (await AuthorizationService.AuthorizeAsync(User, null, Policies.CanWorkOnProjectContent)).Succeeded;
}

<div class="row">
        <div class="col">
            <div class="d-flex justify-content-between">
                <h1>Business model</h1>

                @if (canWorkOnProjectContent) 
                {
                    <a class="btn btn-outline-primary align-self-start" asp-action="@nameof(WorkpackageFiveController.EditBusinessModelCanvas)" >
                        <i class="material-icons">mode_edit</i>
                        <span>Edit</span>
                    </a>
                }

            </div>
        </div>
    </div>
    <div class="row border mb-5 mx-1">
        <div class="col-lg-4 border p-4 h-min-10">
            <div class="d-flex justify-content-between">
                <h2 class="display-5 mb-1">Value proposal</h2>
                <i class="material-icons bg-icon">
                    star
                </i>
            </div>
            <small class="color-grey">What makes me unique, different, special?</small>

            <div class="mt-3">
                @Html.Raw(Model.ValueProposalDescriptionHtml)
            </div>
        </div>
        <div class="col-lg-4 border p-4  h-min-10">
            <div class="d-flex justify-content-between">
                <h2 class="display-5 mb-1">Key resources and partners</h2>
                <i class="material-icons bg-icon">
                    vpn_key
                </i>
            </div>
            <small class="color-grey">What gives me a strategic advantage? Who supports me?</small>
            <div class="mt-3">
                @Html.Raw(Model.KeyResourcesAndPartnersDescriptionHtml)
            </div>
        </div>
        <div class="col-lg-4 border p-4 h-min-10">
            <div class="d-flex justify-content-between">
                <h2 class="display-5 mb-1">Potential clients, users and channels</h2>
                <i class="material-icons bg-icon">
                    people
                </i>
            </div>
            <small class="color-grey">How will I reach clients and users?</small>
            <div class="mt-3">
                @Html.Raw(Model.PotentialClientsAndUsersAndChannelsDescriptionHtml)
            </div>
        </div>
        <div class="col-lg-4 border p-4 h-min-10">
            <div class="d-flex justify-content-between">
                <h2 class="display-5 mb-1">Relevant documentation for device production and use</h2>
                <i class="material-icons bg-icon">
                    insert_drive_file
                </i>
            </div>
            <div class="mt-3">
                @Html.Raw(Model.RelevantDocumentationForProductionAndUseDescriptionHtml)
            </div>
        </div>
        <div class="col-lg-4 border p-4 h-min-10">
            <div class="d-flex justify-content-between">
                <h2 class="display-5 mb-1">Analysis of costs, production, supply chain and services to clients</h2>
                <i class="material-icons bg-icon">
                    monetization_on
                </i>
            </div>
            <div class="mt-3">
                @Html.Raw(Model.AnalysisOfCostsAndProductionAndSupplyChainAndServicesToClientsDescriptionHtml)
            </div>
        </div>
        <div class="col-lg-4 border p-4 h-min-10">
            <div class="d-flex justify-content-between">
                <h2 class="display-5 mb-1">Growth strategy</h2>
                <i class="material-icons bg-icon">
                    show_chart
                </i>
            </div>
            <small class="color-grey">How will I make a sustainable impact?</small>
            <div class="mt-3">
                @Html.Raw(Model.GrowthStrategyDescriptionHtml)                
            </div>
        </div>
    </div>