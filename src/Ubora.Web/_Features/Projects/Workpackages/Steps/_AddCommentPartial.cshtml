@model Ubora.Web._Features.Projects.Workpackages.Steps.AddCommentViewModel

<form asp-controller="ConceptualDesign" asp-action="AddComment" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @Html.HiddenFor(m => m.CandidateId)
    <div class="form-group">
        <label class="mb-4" asp-for="CommentText">Comment</label>
        <textarea class="form-control" asp-for="CommentText" placeholder="Add comment" rows="4"></textarea>
        <span asp-validation-for="CommentText"></span>
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn btn-primary" type="submit">Add comment</button>
    </div>
</form>
