@using Ubora.Web._Features.Projects.Workpackages
@using Ubora.Web._Features.Projects._Shared
@model Ubora.Web._Features.Projects.Workpackages.Steps.DeviceClassificationViewModel

@{
    ViewData["Title"] = "Device classification";
    ViewData["MenuOption"] = ProjectMenuOption.Workpackages;
}

<div class="container-fluid my-4">
    <div class="row">
        <div class="col-sm-12 col-md-4">
            @await Component.InvokeAsync(typeof(WorkpackageListOverviewViewComponent))
        </div>
        
        <div class="col-sm-12 col-md-8 text-center">
            
            <div asp-validation-summary="ModelOnly"></div>

            <h1 class="mb-4">Please answer to the following questionnaire to identify your device classification:</h1>

            <form asp-action="Start" asp-controller="DeviceClassifications" method="post">
                <button type="submit" class="btn btn-primary btn-lg">Take questionnaire</button>
            </form>
        </div>
    </div>
</div>
