@using Ubora.Web._Features.Projects.Workpackages
@model Ubora.Web._Features.Projects.Workpackages.Steps.EditCandidateViewModel

<div class="container-fluid my-4">
    <div class="row">

        <div class="col-lg-3">
            @await Component.InvokeAsync(typeof(WorkpackageListOverviewViewComponent))
        </div>

        <div class="col-lg-9 pr-5">
            <h2>Candidate description</h2>
            <form asp-controller="ConceptualDesign" asp-action="EditCandidate" method="post" enctype="multipart/form-data">
                @Html.HiddenFor(m => m.Id)
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title">Candidate name</label>
                    <input class="form-control" asp-for="Title" placeholder="Name of the candidate">
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <textarea class="form-control w-100" asp-for="Description" rows="1" placeholder="Describe your candidate.."></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-secondary-ghost btn-lg" asp-controller="ConceptualDesign" asp-action="Candidate" asp-route-candidateId="@Model.Id">Discard</a>
                    <span class="mx-1"></span>
                    <button class="btn btn-primary btn-lg" type="submit">Save changes</button>
                </div>
            </form>
        </div>

    </div>
</div>
