@using Ubora.Web._Features.Projects.Workpackages.Steps

<h1>@ViewData[nameof(PageTitle)]</h1>

<div asp-validation-summary="All"></div>

<p class="text-informative">You have the privilege to open work packages because you are in the project leader role. Once you open a work package it will become visible to other projects members.</p>

<form asp-controller="@WorkpackageSixController.Name" asp-action="@nameof(WorkpackageSixController.Unlock)">
    <button type="submit" class="btn btn-outline-primary">
        <i class="material-icons">lock_open</i>
        <span>Open @ViewData[nameof(PageTitle)]</span>
    </button>
</form>