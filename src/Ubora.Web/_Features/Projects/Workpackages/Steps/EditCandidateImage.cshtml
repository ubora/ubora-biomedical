@using Ubora.Web._Features.Projects.Workpackages
@using Ubora.Web._Features.Projects._Shared
@model Ubora.Web._Features.Projects.Workpackages.Steps.EditCandidateImageViewModel

@{
    ViewData["Title"] = "Conceptual Design";
    ViewData["MenuOption"] = ProjectMenuOption.Workpackages;
}

<section class="project-view full-width">
    @await Component.InvokeAsync(typeof(WorkpackageListOverviewViewComponent))

    <form asp-controller="ConceptualDesign" asp-action="EditCandidateImage" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(m => m.Id)

        <div class="form-input">
            <input asp-for="Image">
            <span asp-validation-for="Image"></span>
        </div>
        <div class="center-element">
            <button class="button primary-button" type="submit">Submit</button>
        </div>
    </form>
</section>
