@using Ubora.Web._Features.Projects._Shared

@{
    ViewData["MenuOption"] = ProjectMenuOption.Workpackages;
}


<div class="col-lg-7">
    <div class="row">
        <div class="col">
            <div class="d-flex justify-content-between">
                <h1>ISO compliance</h1>
                <button type="button" class="btn btn-outline-primary align-self-start" data-toggle="modal" data-target="#addStandardModal">
                    <i class="material-icons">add</i>
                    <span>Add standard</span>
                </button>
                <div class="modal fade" id="addStandardModal" tabindex="-1" role="dialog" aria-labelledby="addStandardModal" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="addStandardModalLabel">Add standard</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-group">
                                        <label for="standardTitle">Standard title</label>
                                        <input class="form-control" placeholder="For example EN ISO 13485:2016" id="standardTitle" name="standardTitle" />
                                    </div>
                                    <div class="form-group">
                                        <label for="standardDescription">Description</label>
                                        <textarea class="form-control" placeholder="Short standard description (250 characters)" rows="4" id="standardDescription" name="standardDescription"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="standardLink">Link</label>
                                        <input class="form-control" placeholder="Insert website link" id="standardLink" name="standardLink" />
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-primary">Add standard</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <p>
                The following standards and guidelines are applicable to your device according to the regulation checklist:
            </p>
            <div class="pl-3">
                <div class="d-flex justify-content-between">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="check1" />
                        <label class="custom-control-label" for="check1">
                            <a href="http://shop.bsigroup.com/ProductDetail?pid=000000000030353196" target="_blank">EN ISO 13485:2016</a>
                        </label>
                    </div>
                    <button class="btn btn-icon align-self-start py-0" type="button" data-toggle="collapse" data-target="#collapseStandard1" aria-expanded="false" aria-controls="collapseStandard1">
                        <i class="material-icons">
                            keyboard_arrow_down
                        </i>
                    </button>
                </div>
                <div class="collapse" id="collapseStandard1">
                    <div class="py-2 px-4">
                        This standard specifies requirements for all entities involved in medical devices, in all stages of the product life cycle: from design to manufacture to installation to disposal. Ubora Platform is structured to be a guideline for design activities in compliance to this standard.
                    </div>
                </div>

                <div class="d-flex justify-content-between">
