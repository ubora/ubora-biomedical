@model Ubora.Web._Features.Projects.Workpackages.WorkpackageListOverviewViewModel
@*
    TODO: Map a tags to work package steps
*@
<aside class="project_sidemenu">
    <ol>
        <li class="project_sidemenu--workpackage">
            <h3>WP1: @Model.WorkpackageOne.Title</h3>
            <ol>
                <li>&nbsp;<a asp-controller="WorkpackageOne" asp-action="DesignPlanning">Design planning</a></li>
                @foreach (var step in Model.WorkpackageOne.Steps)
                {
                    <li>
                        <a asp-action="Read" asp-controller="WorkpackageOne" asp-route-stepId="@step.Id">@step.Title</a>
                    </li>
                }
                <li>&nbsp;<a asp-controller="WorkpackageOne" asp-action="DeviceClassification">Device classification</a></li>
                <li>&nbsp;<a href="#" class="project_sidemenu_link--disabled">Regulation checklist</a></li>
                <li>&nbsp;<a asp-controller="WorkpackageOneReview" asp-action="Review">Formal review</a></li>
            </ol>
        </li>

        @if (Model.WorkpackageTwo != null)
        {
            <li class="project_sidemenu--workpackage">
                <h3>WP2: @Model.WorkpackageTwo.Title</h3>
                <ol>
                    @foreach (var step in Model.WorkpackageTwo.Steps)
                    {
                        <li>
                            <a asp-action="Read" asp-controller="WorkpackageTwo" asp-route-stepId="@step.Id">

                                @step.Title
                            </a>
                        </li>
                    }
                    <li>&nbsp;<a asp-controller="WorkpackageTwoReview" asp-action="Review">Formal review</a></li>
                </ol>
            </li>
        }

        @if (Model.WorkpackageThree != null)
        {
            <li class="project_sidemenu--workpackage">
                <h3>WP3: @Model.WorkpackageThree.Title</h3>
                <p>Coming soon!</p>
            </li>
        }
    </ol>
</aside>
