@using Ubora.Web._Features.Projects._Shared
@model Ubora.Web._Features.Projects.Workpackages.Reviews.WorkpackageReviewDecisionPostModel

@{
    ViewData["Title"] = "Write a review";
    ViewData["MenuOption"] = ProjectMenuOption.Workpackages;
}

<div class="container-fluid my-4">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-8">

      <h1>Review WP1</h1>

      <h4>Provide some feedback about this project. Please remember to be constructive.</h4>

      <form class="my-4" method="post">
          @Html.AntiForgeryToken()
          <div class="form-group">
            <textarea class="w-100" asp-for="ConcludingComment" placeholder="Provide some feedback..." rows="8"></textarea>
          </div>

          <div class="form-group d-flex justify-content-center">
            <button class="btn btn-secondary-ghost btn-lg" type="submit" formaction="@Model.RejectUrl">Reject</button>
            <span class="mx-1"></span>
            <button class="btn btn-primary btn-lg" type="submit" formaction="@Model.AcceptUrl">Accept</button>
          </div>
      </form>

    </div>
  </div>
</div>
