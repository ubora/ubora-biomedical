@using Ubora.Web._Features.Projects._Shared
@model Ubora.Web._Features.Projects.InviteMentors.MentorsViewModel
@{
    ViewData["Title"] = "Mentors";
    ViewData["MenuOption"] = ProjectMenuOption.Members;
}


<div class="container-fluid my-4">

  <div class="row">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-8">
      @if(Model.ProjectMentors.Any()) {
        <h1 class="display-4">Project mentors</h1>
        <div class="row my-4">
        @foreach (var mentor in Model.ProjectMentors)
        {
          <div class="col-sm-12 col-md-4 col-lg-3 my-2">
            <div class="card text-center">
              <div class="card-body">
                <div class="justify-content-center">
                  <img class="card-img-top my-4" src="@mentor.ProfilePictureLink" alt="@mentor.FullName profile picture" width="100" height="100">
                </div>
                <h4 class="card-title my-4"><a asp-action="View" asp-controller="Profile" asp-route-userId="@mentor.UserId" class="user-card--name">@mentor.FullName</a></h4>
                <form class="form-group" asp-action="InviteMentor">
                    <input type="hidden" name="@nameof(mentor.UserId)" value="@mentor.UserId" />
                </form>
              </div>
            </div>
          </div>
        }
        </div>
      }
    </div>
  </div>


  <div class="row justify-content-center">
    <div class="col-lg-8">
      <h1 class="display-4">All UBORA mentors</h1>
      <div class="row my-4">
      @foreach (var mentor in Model.UboraMentors)
      {
        <div class="col-sm-12 col-md-4 col-lg-3 my-2">
          <div class="card text-center">
            <div class="card-body">
              <img class="avatar my-4" src="@mentor.ProfilePictureLink" alt="@mentor.FullName profile picture" width="100" height="100">
              <h4 class="card-title"><a asp-action="View" asp-controller="Profile" asp-route-userId="@mentor.UserId" class="user-card--name">@mentor.FullName</a></h4>
              <form class="form-group" asp-action="InviteMentor">
                  <input type="hidden" name="@nameof(mentor.UserId)" value="@mentor.UserId" />
                  <button class="btn btn-secondary-ghost" type="submit">Invite mentor</button>
              </form>
            </div>
          </div>
        </div>
      }
      </div>
    </div>
  </div>

</div>
