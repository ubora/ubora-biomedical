@using Ubora.Web._Features.Projects._Shared
@using Microsoft.AspNetCore.Authorization
@using Ubora.Web.Authorization

@inject IAuthorizationService AuthorizationService

@model Ubora.Web._Features.Projects._Shared.ProjectMenuViewModel

<nav class="project_navigation">
    
    <a class="project_navigation_link @Model.OverviewActivityCssClass" asp-controller="Dashboard" asp-action="Dashboard">Project overview</a>
    @if (await AuthorizationService.AuthorizeAsync(User, null, new IsProjectMemberRequirement()))
    {
        <a class="project_navigation_link @Model.WorkpackagesActivityCssClass" asp-controller="WorkpackageOne" asp-action="Overview">Workpackages</a>
        <a class="project_navigation_link @Model.TasksActivityCssClass" asp-controller="Tasks" asp-action="Tasks">Tasks</a>
        <a class="project_navigation_link @Model.NewsActivityCssClass" href="#">News</a>
        <a class="project_navigation_link @Model.DocumentationActivityCssClass" href="#">Documentation</a>
        <a class="project_navigation_link @Model.RepositoryActivityCssClass" href="#">Repository</a>
        <a class="project_navigation_link @Model.HistoryActivityCssClass" asp-controller="History" asp-action="History">Activity</a>
    }
    <a class="project_navigation_link @Model.MembersActivityCssClass" asp-controller="Members" asp-action="Members">Members</a>
   
</nav>