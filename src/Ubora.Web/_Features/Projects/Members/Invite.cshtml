@model InviteProjectMemberViewModel

@{
    ViewData[nameof(PageTitle)] = "Invite member";
    ViewData[nameof(ProjectMenuOption)] = ProjectMenuOption.Members;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">UBORA</a></li>
        <li class="breadcrumb-item"><a asp-controller="Members" asp-action="Members">Members</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData[nameof(PageTitle)]</li>
    </ol>
</nav>
<div class="row">
    <div class="col">
        <h1>@ViewData[nameof(PageTitle)]</h1>

        <input type="hidden" name="searchUsersUrl" value="@Url.Action("SearchUsers","UserList")" />
        <form asp-controller="Members" asp-action="Invite" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email">User's email address</label>
                <input class="form-control js-search-user" asp-for="Email" placeholder="Email address" autofocus>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-primary" type="submit">Invite member</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/dist/libs/autocomplete.min.js"></script>
}
