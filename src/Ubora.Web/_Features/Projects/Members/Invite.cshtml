@using Ubora.Web._Features.Projects._Shared
@model Ubora.Web._Features.Projects.Members.InviteProjectMemberViewModel

@{
    ViewData["Title"] = "Invite member";
    ViewData["MenuOption"] = ProjectMenuOption.Members;
}

<section class="narrow-width">
    <input type="hidden" name="searchUsersUrl" value="@Url.Action("SearchUsers","UserList")" />

    <form asp-controller="Members" asp-action="Invite" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-input">
            <label asp-for="Email">User's email address</label>
            <input asp-for="Email" placeholder="Email address" class="js-search-user" autofocus>
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-input">
            <button class="btn btn-primary btn-lg" type="submit">Invite member</button>
        </div>
    </form>
</section>

@section Scripts {
  <script src="~/dist/lib/autocomplete.min.js"></script>
}
