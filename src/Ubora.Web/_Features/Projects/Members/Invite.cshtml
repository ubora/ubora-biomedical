@using Ubora.Web._Features.Projects._Shared
@model Ubora.Web._Features.Projects.Members.InviteProjectMemberViewModel

@{
    ViewData["Title"] = "Invite member";
    ViewData["MenuOption"] = ProjectMenuOption.Members;
}

<div class="container-fluid my-4">
  <div class="row justify-content-center">
    <div class="col-md-4 col-lg-3">
      <input type="hidden" name="searchUsersUrl" value="@Url.Action("SearchUsers","UserList")" />
      <form asp-controller="Members" asp-action="Invite" method="post">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="form-group">
              <label asp-for="Email">User's email address</label>
              <input class="form-control js-search-user" asp-for="Email" placeholder="Email address" autofocus>
              <span asp-validation-for="Email"></span>
          </div>
          <div class="d-flex justify-content-center">
              <button class="btn btn-primary" type="submit">Invite member</button>
          </div>
      </form>
    </div>
  </div>
</div>

@section Scripts {
  <script src="~/dist/lib/autocomplete.min.js"></script>
}
