@using Ubora.Web._Features.Projects.Members

@model RemoveMemberViewModel

@{
    ViewData["Title"] = "Remove member";
}


<div class="container-fluid my-4">
  <div class="row">
    <div class="col text-center">

      <h2>Are you sure you want to remove "@Model.MemberName" from project?</h2>
      <form asp-controller="Members" asp-action="RemoveMember" method="post">
          <input asp-for="MemberId" type="hidden" />
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>

          <input asp-for="MemberId" type="hidden" />

          <div class="center-element">
              <a class="btn btn-secondary-ghost" asp-controller="Members" asp-action="Members">No, keep</a>
              <button class="btn btn-primary" type="submit">Yes, remove</button>
          </div>
      </form>

    </div>
  </div>
</div>
