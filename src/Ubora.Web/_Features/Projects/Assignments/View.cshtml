@using Ubora.Web._Features.Projects._Shared
@model Ubora.Web._Features.Projects.Assignments.EditAssignmentViewModel

@{
    ViewData["Title"] = "Assignments";
    ViewData["MenuOption"] = ProjectMenuOption.Assignments;
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <h1>Assignment</h1>
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input class="form-control" asp-for="Title" placeholder="Assignment title" disabled>
                <span asp-validation-for="Title"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea class="form-control" asp-for="Description" placeholder="Assignment description" rows="3" disabled></textarea>
            </div>

            <div class="form-group">
                <label asp-for="AssigneeIds">Assignee</label>
                <select asp-for="AssigneeIds" class="form-control js-project-member-selection multiple-select-box select2" multiple="multiple" disabled>
                    @foreach (var member in Model.ProjectMembers)
                    {
                        <option value="@member.AssigneeId">@member.FullName</option>
                    }
                </select>
            </div>
        </div>
    </div>
</div>

@section Head {
    <link rel="stylesheet"
          href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css"
          asp-fallback-href="~/dist/lib/select2.min.css">
}

@section Scripts {
    <script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"
            asp-fallback-src="~/dist/lib/select2.min.js"
            asp-fallback-test="window.select2">
    </script>
    <script>
        $(document).ready(function () {
            $('.js-project-member-selection').select2();
        });
    </script>
}
