@using Ubora.Web._Features.Projects._Shared
@model Ubora.Web._Features.Projects.Assignments.EditAssignmentViewModel

@{
    ViewData["Title"] = "Assignments";
    ViewData["MenuOption"] = ProjectMenuOption.Assignments;
}

<section class="medium-width">
    <h1 class="full-width">Task draft</h1>

    <form asp-controller="Assignments" asp-action="Edit" method="post">

        <input asp-for="ProjectId" type="hidden"/>

        <label>
            Title
            <input asp-for="Title">
            <span asp-validation-for="Title"></span>
        </label>

        <label>
            Description
            <input asp-for="Description">
            <span asp-validation-for="Description"></span>
        </label>

        <button class="button primary-button" type="submit">Edit assignment</button>
    </form>
</section>
