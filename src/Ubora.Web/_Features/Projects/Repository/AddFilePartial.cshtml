          <div class="form-group">
            <label asp-for="ProjectFiles" class="custom-file">
              <input class="form-control" type="file" asp-for="ProjectFiles" multiple>
              @* <input class="custom-file-input" type="file" asp-for="ProjectFiles" multiple> *@
              @* <span class="custom-file-control form-control-file"></span> *@
            </label>
            <span asp-validation-for="ProjectFiles"></span>
          </div>


          <div class="form-group">
            <label asp-for="FolderName">Select a folder</label>
            <select class="form-control" asp-for="FolderName">
              <option selected disabled>Select a folder</option>
              <option value="Hardware">Hardware</option>
              <option value="Electronics and firmware">Electronics and firmware</option>
              <option value="Software">Software</option>
              <option value="System integrations">System integrations</option>
            </select>
            <span class="my-3" asp-validation-for="FolderName"></span>
          </div>

          <div class="form-group">
              <label asp-for="Comment">Comment</label>
              <input class="form-control" asp-for="Comment" type="text" placeholder="Enter a comment...">
          </div>

          <div class="d-flex justify-content-center">
            <button class="btn btn-primary btn-lg">Upload new file</button>
          </div>
      </form>
  </div>
</div>

