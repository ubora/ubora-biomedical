@model Ubora.Web._Features.Projects.Repository.AddFileViewModel

<div class="row">
  <div class="col d-flex flex-column align-items-center">
    <h2>Upload new file</h2>
      <form method="post" enctype="multipart/form-data" asp-controller="Repository" asp-action="AddFile">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>


