@using Ubora.Web._Features.Projects._Shared
@using Ubora.Web._Features.Projects.Repository
@model Ubora.Web._Features.Projects.Repository.ProjectRepositoryViewModel

@{
    ViewData["Title"] = "Repository";
    ViewData["MenuOption"] = ProjectMenuOption.Repository;
}

@section Left {
    @Html.Partial("AddFilePartial", Model.AddFileViewModel)
}

@foreach (var files in Model.AllFiles)
{
    <div class="mb-3">
        <h2>@files.Key</h2>

        <div class="d-lg-block d-none">
            <div class="row mx-0 py-2 border-bottom">

                <div class="col-lg-3 font-weight-light-bold">
                    File name
                </div>
                <div class="col-lg-2 font-weight-light-bold">
                    Revision number
                </div>
                <div class="col-lg-2 font-weight-light-bold">
                    Size (kB)
                </div>
                <div class="col-lg-3 font-weight-light-bold">
                    Comment
                </div>
                <div class="col-lg-2">

                </div>
            </div>
        </div>

        @foreach (var file in files)
        {

            <div class="row mx-0 py-2 border-bottom">
                <div class="col-lg-3">
                    <span class="break-word-all">@file.FileName</span>
                </div>
                <div class="col-lg-2">
                    <span class="d-md-block d-lg-none font-weight-light-bold">Revision number:</span>
                    @file.RevisionNumber
                </div>
                <div class="col-lg-2">
                    <span class="d-md-block d-lg-none font-weight-light-bold">Size (kB):</span>
                    @file.FileSizeInKbs
                </div>
                <div class="col-lg-3">
                    <span class="d-md-block d-lg-none font-weight-light-bold">Comment:</span>
                    @file.Comment
                </div>
                <div class="col-lg-2">

                    @if (file.Has3DFileExtension())
                    {
                        <a href="@Url.Action("View3DFile", "Repository", new { fileId = file.Id })" title="View 3D file" aria-label="View 3D file" data-toggle="tooltip" data-placement="bottom"><i class="file-list--item-control material-icons">3d_rotation</i></a>
                    }

                    <a href="@Url.Action("DownloadFile", "Repository", new { fileId = file.Id })" title="Download file" aria-label="Download file" data-toggle="tooltip" data-placement="bottom"><i class="file-list--item-control material-icons">file_download</i></a>

                    <a href="@Url.Action("UpdateFile", new {fileId = file.Id})" title="Update file" aria-label="Update file" class="no-underline" data-toggle="tooltip" data-placement="bottom"><i class="file-list--item-control material-icons">file_upload</i></a>

                    <a href="@Url.Action("FileHistory", new {fileId = file.Id})" title="File history" aria-label="File history" class="no-underline" data-toggle="tooltip" data-placement="bottom"><i class="file-list--item-control material-icons">history</i></a>

                    <i class="file-list--item-control material-icons js-clipboard"
                       title="Copy file path to clipboard"
                       aria-label="Copy file"
                       data-toggle="tooltip"
                       data-placement="bottom"
                       data-clipboard-text="@Url.Action("DownloadFile", "Repository", new { fileId = file.Id }, Context.Request.Scheme)">
                        content_copy
                    </i>

                    @if (Model.CanHideProjectFile)
                    {
                        <a href="@Url.Action("HideFile", new {fileId = file.Id})" title="Delete file forever" aria-label="Delete file forever" class="no-underline" data-toggle="tooltip" data-placement="bottom">
                            <i class="file-list--item-control material-icons">delete_forever</i>
                        </a>
                    }

                </div>
            </div>
        }
    </div>
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <link rel="stylesheet"
          href="//cdnjs.cloudflare.com/ajax/libs/dropzone/5.4.0/min/dropzone.min.css"
          asp-fallback-href="~/dist/libs/dropzone.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/dropzone/5.4.0/dropzone.js"
            asp-fallback-src="~/dist/libs/dropzone.js">
    </script>
    <script src="~/dist/drag_and_drop_file_uploads.bundle.js"></script>
}
