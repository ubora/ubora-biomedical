@using Ubora.Web._Features.Projects._Shared
@model Ubora.Web._Features.Projects.Repository.ProjectRepositoryViewModel

@{
    ViewData["Title"] = "Repository";
    ViewData["MenuOption"] = ProjectMenuOption.Repository;
}

<section class="medium-width">
    <h1>@Model.ProjectName</h1>
    <h3>Project repository</h3>
</section>

<section class="medium-width file-repository">
    <ul class="file-list">

        @foreach (var file in Model.Files)
        {
            <li class="file-list--item">
                <a href="@Url.Action("DownloadFile", new { fileId = file.Id})">
                    <i class="file-list--item-control material-icons">cloud_download</i>
                </a>
                <a href="@Url.Action("UpdateFile", new { fileId = file.Id})">
                    <i class="file-list--item-control material-icons">cloud_upload</i>
                </a>
                <a href="@Url.Action("HideFile", new { fileId = file.Id})">
                    <i class="file-list--item-control material-icons">delete_forever</i>
                </a>
                <span class="file-list--name">@file.FileName</span>
            </li>
        }
    </ul>

    <div class="file-upload">
        <h3>Upload new file</h3>
        @Html.Partial("AddFilePartial", Model.AddFileViewModel)
    </div>
</section>
