@using Ubora.Web._Features.Projects._Shared
@model Ubora.Web._Features.Projects.Repository.UpdateFileViewModel

@{
    ViewData["Title"] = "Replace file";
    ViewData[nameof(ProjectMenuOption)] = ProjectMenuOption.Repository;
}

<div class="container-fluid my-4">
  <div class="row flex-column align-items-center">
    <h1>Replace file</h1>
    <div class="col-md-4 col-lg-3">

      <div class="form-group d-flex flex-column">
        <input class="form-control" asp-for="FileName" disabled>
      </div>

      <form method="post" enctype="multipart/form-data" asp-controller="Repository" asp-action="UpdateFile">
        @Html.HiddenFor(m => m.FileId)
        @Html.HiddenFor(m => m.FileName)

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
          <input class="form-control" asp-for="ProjectFile">
          <span asp-validation-for="ProjectFile"></span>
        </div>

        <div class="form-group d-flex flex-column">
          <label asp-for="Comment">Comment</label>
          <input class="form-control" asp-for="Comment" type="text" placeholder="Enter a comment...">
        </div>

        <div class="form-group text-center">
          <button class="btn btn-primary">Upload new file</button>
        </div>
      </form>
    </div>
  </div>
</div>
