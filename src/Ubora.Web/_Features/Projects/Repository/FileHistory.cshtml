@using Ubora.Web._Features.Projects._Shared
@model Ubora.Web._Features.Projects.Repository.FileHistoryViewModel

@{
    ViewData["Title"] = "File history";
    ViewData["MenuOption"] = ProjectMenuOption.Repository;
}



<div class="container my-4">
    <div class="row">
        <div class="col">
            <h2 class="my-4">History of @Model.FileName</h2>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">Date added</th>
                            <th scope="col">Revision number</th>
                            <th scope="col">Size (kB)</th>
                            <th scope="col">Comment</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var file in Model.Files)
                        {
                            // Note: Please keep the a-element and i-element on same line because otherwise a strange "little line" appears next to the icon when link is hovered. 
                            <tr>
                                <td>
                                @if (file.Has3DFileExtension())
                                {
                                <a href="@Url.Action("View3DHistoryFile", "Repository", new { eventId = file.EventId })" title="View 3D file" aria-label="View 3D file" data-toggle="tooltip" data-placement="bottom"><i class="file-list--item-control material-icons">3d_rotation</i></a>
                                }
                                <a href="@Url.Action("DownloadHistoryFile", "Repository", new { eventId = file.EventId })" title="Download file" aria-label="Download file" data-toggle="tooltip" data-placement="bottom"><i class="file-list--item-control material-icons">file_download</i></a>
                                <i class="file-list--item-control material-icons js-clipboard"
                                   title="Copy file path to clipboard"
                                   aria-label="Copy file"
                                   data-toggle="tooltip"
                                   data-placement="bottom"
                                   data-copy="@Url.Action("DownloadHistoryFile", "Repository", new { eventId = file.EventId }, Context.Request.Scheme)">
                                    content_copy
                                </i>
                                </td>
                                <td class="timeago" title="@file.FileAddedOn">@file.FileAddedOn.ToString("dd.MM.yyyy")</td>
                                <td>@file.RevisionNumber</td>
                                <td>@file.FileSizeInKbs</td>
                                <td>@file.Comment</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
