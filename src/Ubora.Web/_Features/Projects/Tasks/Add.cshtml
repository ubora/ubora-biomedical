@using Ubora.Web._Features.Projects.Tasks
@model Ubora.Web._Features.Projects.Tasks.AddTaskViewModel

<section class="medium-width">
    <h1 class="full-width">Task draft</h1>

    <form asp-controller="Tasks" asp-action="Add" method="post">
        
        <input asp-for="ProjectId" type="hidden"/>

        <label>
            Task title
            <span asp-validation-for="Title"></span>
            <input asp-for="Title" placeholder="Task title">
        </label>
        
        <label>
            Task description
            <span asp-validation-for="Description"></span>
            <input asp-for="Description" placeholder="Task description">
        </label>

        <br>
        <button class="button primary-button" type="submit">Add task</button>
    </form>
</section>
