@using Ubora.Web._Features.Projects._Shared
@using Ubora.Web._Features.Projects.Dashboard

@model EditProjectImageViewModel

@{
    ViewData["Title"] = "Dashboard";
    ViewData["MenuOption"] = ProjectMenuOption.Overview;
}

<div class="container-fluid my-4">
  <div class="row">
    <div class="col text-center">
      <form method="post" enctype="multipart/form-data" asp-controller="Dashboard" asp-action="EditProjectImage">
          <h2>Project image</h2>
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>

          <div class="form-group">
              @* <label asp-for="Image">Upload new image</label> *@
              <label class="text-muted">Recommended image size is 1920x1285 px. The given image will be cropped and resized to 1500x1125 and 400x300 pixel images.</label>
              <label class="text-muted">Image has to be less than 4 MB</label>
              @* <input asp-for="Image"> *@
              @* <span class="custom-file-control" asp-validation-for="Image"></span> *@
              <span asp-validation-for="Image"></span>
              <label asp-for="Image" class="custom-file">
                <input class="form-control" type="file" asp-for="Image">
                @* <span class="custom-file-control form-control-file"></span> *@
              </label>
          </div>

          <div class="form-group">
            <button class="btn btn-secondary-ghost btn-lg" type="submit">Upload image</button>
          </div>

      </form>
    </div>
  </div>
</div>



<script>
  $('.custom-file-input').on('change',function(){
  var fileName = $(this).val();
  $(this).next('.form-control-file').addClass("selected").html(fileName);
  })
</script>
