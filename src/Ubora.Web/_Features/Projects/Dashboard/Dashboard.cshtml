@using Ubora.Web.Data
@using Ubora.Web._Features.Projects._Shared
@model Ubora.Web._Features.Projects.Dashboard.ProjectDashboardViewModel

@{
    ViewData["Title"] = "Overview";
    ViewData["MenuOption"] = ProjectMenuOption.Overview;
}

<div class="container my-4">
    <div class="row">
        <div class="col-lg-9">
            <h1>
                @Model.Title
                @if (Model.IsInDraft)
                {
                    <span class="badge badge-pill badge-orange normal-text">Draft</span>
                }
            </h1>
        </div>
        <div class="col-lg-3">
            @if (!Model.IsProjectMember && await AuthorizationService.IsAuthorizedAsync(User, Policies.CanJoinProject))
            {
                <div class="d-flex justify-content-end">
                    <a class="btn btn-outline-primary" href="@Url.Action("Join", "Members")">
                        <i class="material-icons align-middle">add</i>
                        <span>Join project</span>
                    </a>
                </div>
            }
        </div>
    </div>
   
    <div class="row">
        <div class="col-lg-5">
            <div class="row">
                <div class="col">
                    <div class="card">
                        <img class="card-img-top img-fluid w-100" src="@(string.IsNullOrEmpty(Model.ImagePath)?"/images/project-default-image.png":Model.ImagePath)" alt="Illustrative project image">
                        @if (await AuthorizationService.IsAuthorizedAsync(User, Policies.CanChangeProjectImage))
                        {
                            <div class="card-img-overlay text-center">
                                @if (Model.HasImage)
                                {
                                    <div class="flex-wrap">
                                        <a class="mx-1" asp-controller="Dashboard" asp-action="EditProjectImage">
                                            <i class="material-icons align-middle" id="EditImage">mode_edit</i><span class="align-middle">Change image</span>
                                        </a>
                                        <a class="mx-1" asp-controller="Dashboard" asp-action="RemoveProjectImage">
                                            <i class="material-icons align-middle">delete_forever</i>
                                            <span class="align-middle">Remove image</span>
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <a asp-controller="Dashboard" asp-action="EditProjectImage"><i class="material-icons align-middle" id="EditImage">mode_edit</i><span class="align-middle">Add image</span></a>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>

          

            <div class="row mt-4">
                <div class="col d-flex justify-content-between">
                    <h2>Medical tags</h2>
                    @if (Model.IsProjectMember)
                    {
                        <a class="btn-icon btn-sm d-flex align-content-center" asp-controller="WorkpackageOne" asp-action="ProjectOverview" asp-route-returnurl="@Url.Action("Dashboard","Dashboard")">
                            <i class="material-icons mx-1" id="EditImage">mode_edit</i>
                            <span>Edit</span>
                        </a>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <dl class="row">
                        <dt class="col-sm-5 mb-lg-4">Clinical need:</dt>
                        <dd class="col-sm-7">@Model.ClinicalNeedTags</dd>
                        <dt class="col-sm-5 mb-lg-4">Clinical area:</dt>
                        <dd class="col-sm-7">@Model.AreaOfUsageTags</dd>
                        <dt class="col-sm-5 mb-lg-4">Technology:</dt>
                        <dd class="col-sm-7">@Model.PotentialTechnologyTags</dd>
                        <dt class="col-sm-5 mb-lg-4">Project keywords:</dt>
                        <dd class="col-sm-7">@Model.Gmdn</dd>
                        <dt class="col-sm-5 mb-lg-4">Device classification:</dt>
                        <dd class="col-sm-7">@Model.DeviceClassification</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="row">
                <div class="col d-flex justify-content-between">
                    <h2>Project description</h2>
                    @if (await AuthorizationService.IsAuthorizedAsync(User, Policies.CanEditProjectTitleAndDescription))
                    {
                        <a class="btn-icon btn-sm d-flex align-content-center" asp-controller="Dashboard" asp-action="EditProjectTitleAndDescription" id="EditProjectDescription">
                            <i class="material-icons mx-1">mode_edit</i>
                            <span id="EditDescription">Edit</span>
                        </a>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col">
                    @if (!string.IsNullOrWhiteSpace(Model.Description))
                    {
                        <div class="text-markdown">@Model.Description</div>
                    }
                    else
                    {
                        <p class="text_placeholder">No project description set yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
 

