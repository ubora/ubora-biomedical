@using Ubora.Web._Features.Projects._Shared
@model Ubora.Web._Features.Projects.Dashboard.ProjectDashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    ViewData["MenuOption"] = ProjectMenuOption.Overview;
}

<div class="container-fluid col-8 my-4">
    <div class="row mb-5">
        <div class="col px-0">

            <div class="card w-100 h-100">
                <img class="card-img-top img-fluid w-100" src="@(string.IsNullOrEmpty(Model.ImagePath)?"/images/projectlogodefault.png":Model.ImagePath)" alt="Illustrative project photo">
                @if (Model.IsInDraft)
                {
                    <p class="project-status-draft">Draft</p>
                }
                <div class="card-body">
                    <h4 class="card-title ">@Model.Title</h4>
                </div>
            </div>

            @if (!Model.IsProjectMember)
            {
                <a href="@Url.Action("Join", "Members")"><i class="material-icons">add</i>Join project</a>
            }
            else
            {
                <div class="project_photo--controls">

                    @if (Model.HasImage)
                    {
                        <a asp-controller="Dashboard" asp-action="EditProjectImage"><i class="material-icons" id="EditImage">mode_edit</i>&nbsp;Change image</a>
                        <a asp-controller="Dashboard" asp-action="RemoveProjectImage"><i class="material-icons">delete_forever</i>&nbsp;Remove image</a>
                    }
                    else
                    {
                        <a asp-controller="Dashboard" asp-action="EditProjectImage"><i class="material-icons" id="EditImage">mode_edit</i>&nbsp;Add image</a>
                    }
                </div>
            }
        </div>
        <div class="col px-0 mx-4">
            <h2>Medical tags</h2>
            <table class="table table-responsive table-medical-tags">
                <tbody>
                    <tr>
                        <th class="w-50" scope="row">
                            <h3 class="display-5">Clinical need:</h3>
                        </th>
                        <td>
                            @Model.ClinicalNeedTags
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">
                            <h3 class="display-5">Clinical area:</h3>
                        </th>
                        <td>
                            @Model.AreaOfUsageTags
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">
                            <h3 class="display-5">Technology:</h3>
                        </th>
                        <td>
                            @Model.PotentialTechnologyTags
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">
                            <h3 class="display-5">Project keywords:</h3>
                        </th>
                        <td>
                            @Model.Gmdn
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">
                            <h3 class="display-5">Device classification:</h3>
                        </th>
                        <td>
                            @Model.DeviceClassification
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col px-0">
            <div class="row">
                <div class="col px-0">
                    <h2>Project description</h2>
                </div>
                <div class="col-2 d-flex align-items-center justify-content-end">
                    @if (Model.IsProjectMember)
                    {
                        <a asp-controller="Dashboard" asp-action="EditProjectDescription" id="EditProjectDescription"><i class="material-icons">mode_edit</i>&nbsp;Edit</a>
                    }
                </div>
            </div>
            <div class="row">
                @if (!string.IsNullOrWhiteSpace(Model.Description))
                {
                    <div class="text-markdown">@Model.Description</div>
                }
                else
                {
                    <p class="text_placeholder">No project description set yet.</p>
                }
            </div>
        </div>
    </div>

