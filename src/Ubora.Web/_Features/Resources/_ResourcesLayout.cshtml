@using Ubora.Domain.Infrastructure.Specifications
@using Ubora.Domain.Resources
@using Ubora.Web._Features.Resources
@using Ubora.Web._Features.Resources.Models
@inject Ubora.Domain.Infrastructure.Queries.IQueryProcessor QueryProcessor

<!DOCTYPE html>
<html lang="en">
<head>
    @RenderSection("Head", required: false)
    @{
        Html.RenderPartial("_LayoutHead");
    }
    <link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
</head>

<body>
    @{
        Html.RenderPartial("_Header");
    }

    <main>
        <div class="container-fluid">
            <div class="row">
                <div class="col-2 py-3 @(IsSectionDefined("left") ? "border-right" : "") h-min-50">
                    @{
                        if (IsSectionDefined("left"))
                        {
                            @RenderSection("Left", required: false)
                        }
                    }
                </div>
                <div class="col-8 py-3 px-xl-7">
                    @RenderBody()
                </div>
                <div class="col-2 py-3 @(IsSectionDefined("Right") ? "border-left" : "")">
                    @RenderSection("Right", required: false)
                </div>
            </div>
        </div>
    </main>

    @{
        Html.RenderPartial("_Footer");
        Html.RenderPartial("_LayoutBody");
    }
    <script src="//cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="~/dist/resources.bundle.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>