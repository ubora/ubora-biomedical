@using Ubora.Web.Data
@using Ubora.Web._Features.Users.Account
@model Ubora.Web._Features.Users.Account.LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
	ViewData["Title"] = "Sign in to UBORA";
}

<div class="container my-4">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="POST">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email">Email address</label>
                    <input class="form-control" asp-for="Email" placeholder="email@example.com" autocomplete autofocus required>
                    <span asp-validation-for="Email"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Secret password</label>
                    <input class="form-control" asp-for="Password" placeholder="Secret password" required>
                    <span asp-validation-for="Password"></span>
                </div>

                <div class="text-center">
                    <button class="btn btn-primary" type="submit">Sign in</button>
                    <div class="my-4">
                        <a asp-action="ForgotPassword">Forgot password?</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row justify-content-center text-center">
        <div class="col-lg-6 col-md-8">
            <h1>Don't have an account?</h1>
            <a class="btn btn-outline-primary" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Sign up</a>
        </div>
    </div>
</div>

</div>

@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
