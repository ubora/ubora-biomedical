@using Ubora.Web._Features.Users.Account
@model Ubora.Web._Features.Users.Account.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset password";
}

<section class="narrow-width">
    <h1>@ViewData["Title"]</h1>

    <form asp-controller="Account" asp-action="ResetPassword" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input asp-for="Code" type="hidden" />

        <div class="form-input">
            <label asp-for="Email">Email address</label>
            <input asp-for="Email" placeholder="email@example.com" autofocus>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-input">
            <label asp-for="Password">New password</label>
            <input asp-for="Password" placeholder="New password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-input">
            <label asp-for="ConfirmPassword">Confirm new password</label>
            <input asp-for="ConfirmPassword" placeholder="Confirm new password">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-input">
            <button type="submit" class="button primary-button full-width">Reset</button>
        </div>
    </form>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
