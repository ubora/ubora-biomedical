@using Ubora.Web._Features.Users.UserList
@model Ubora.Web._Features.Users.UserList.UserListController.IndexViewModel

@{
    ViewData["Title"] = "Community";
}

<div class="container my-5">
    <div class="infinite-scroll">
        <h1>Community</h1>
        <div class="post">
            <div class="row">
                @foreach (var user in Model.UserListItems)
                {
                    Html.RenderPartial("~/_Components/UserCards/UserCard.cshtml", new UserCardViewModel(
                        userId: user.UserId,
                        name: user.FullName,
                        roles: user.Role,
                        profilePictureUrl: user.ProfilePictureLink)
                    );
                }
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <button class="btn btn-outline-primary view-more-button mt-3">Load more</button>
    </div>

    <div class="page-load-status text-center color-grey mt-3">
        <p class="infinite-scroll-last">End of content</p>
        <p class="infinite-scroll-error">No more pages to load</p>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/dist/infinite_scroll.bundle.js"></script>
    <script>
        UBORA.initInfiniteScroll('/UserList/Index?page=', @Html.Raw(Model.Pager.PageCount));
    </script>
}


