@using Ubora.Web._Features.Users.UserList
@model System.Collections.Generic.IEnumerable<UserListItemViewModel>

@{
    ViewData["Title"] = "Community";
}

<div class="container-fluid my-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="row">
        @foreach (var user in Model)
        {
          <div class="col-sm-12 col-md-4 col-lg-3 my-2">
            <div class="card text-center">
              <div class="justify-content-center">
                <img class="card-img-top my-4 avatar" src="@user.ProfilePictureLink" alt="@user.FullName profile picture" width="150" height="150">
              </div>
              <div class="card-body">
                <h4 class="card-title">@Html.ActionLink(user.FullName, "ViewProfile", "Profile", new { userId = user.UserId }, new {@class = "user-card--name"})</h4>
                <p>@(user.Role)&nbsp;</p>
              </div>
            </div>
          </div>

        }
      </div>
    </div>
  </div>
</div>
