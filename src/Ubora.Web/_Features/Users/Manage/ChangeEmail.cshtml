@model Ubora.Web._Features.Users.Manage.ChangeEmailViewModel
@{
    ViewData["Title"] = "Change Email";
}

<section class="narrow-width">
    <h1>@ViewData["Title"]</h1>

    <form asp-controller="Manage" asp-action="ChangeEmail" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-input">
            <label asp-for="NewEmail">
                New Email
            </label>
            <input asp-for="NewEmail" placeholder="New Email" />
            <span asp-validation-for="NewEmail"></span>
        </div>

        <div class="form-input">

            <label asp-for="Password">
                Password
            </label>
            <input asp-for="Password" placeholder="Password" />
            <span asp-validation-for="Password"></span>
        </div>

        <button type="submit" class="button primary-button">Change email</button>
    </form>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}