@model Ubora.Web._Features.Users.Profile.ProfileViewModel

@{
    ViewData["Title"] = "View profile";
}

<div class="container-fluid my-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">

      <div class="row mb-4">
        <div class="col-lg-4">
          <img class="avatar img-fluid mb-2" src="@Model.ProfilePictureLink" width="250" height="250" />
        </div>
        <div class="col-lg-8">
          @if (Model.IsDeleted)
          {
              <div class="form-group text-center">
                  <p class="text-uppercase text-danger">This user has been deleted.</p>
              </div>
          }
          <h2 class="fullname mb-4">@Model.FullName</h2>
          <dl class="row">
            <dt class="col-sm-2">UBORA role:</dt>
            <dd class="col-sm-10">@Model.Role</dd>
            <dt class="col-sm-2">E-mail:</dt>
            <dd class="col-sm-10"><a class="email" href="mailto:@Model.Email?Subject=Message%20from%20UBORA">@Model.Email</a></dd>
            <dt class="col-sm-2">Country:</dt>
            <dd class="col-sm-10">Kenya</dd>
          </dl>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-4">
          <h4>Academia</h4>
          <dl class="row mb-4">
            <dt class="col-sm-4">University:</dt>
            <dd class="col-sm-8">@Model.University</dd>
            <dt class="col-sm-4">Degree:</dt>
            <dd class="col-sm-8">@Model.Degree</dd>
            <dt class="col-sm-4">Field:</dt>
            <dd class="col-sm-8">@Model.Field</dd>
          </dl>

          <h4>Working experience</h4>
          <dl class="row mb-4">
            <dt class="col-sm-4">Institution:</dt>
            <dd class="col-sm-8">AgileWorks</dd>
          </dl>
          <p>I am involved in development and use of medical devices as...</p>
        </div>

        <div class="col-lg-8">
          <div class="mb-4">
            <h4>Bio</h4>
            <p>@Model.Biography</p>
          </div>
          <div class="mb-4">
            <h4>Skills</h4>
            <p>@Model.Skills</p>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
