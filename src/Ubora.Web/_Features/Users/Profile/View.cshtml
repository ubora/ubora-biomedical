@using Ubora.Web._Features.Users.Profile
@model Ubora.Web._Features.Users.Profile.ProfileViewModel

@{
    ViewData["Title"] = "View profile";
}

<section class="narrow-width">
    <h2>@ViewData["Title"]</h2>
    <div class="form-input">
        <label>
            Email
        </label>
        <input asp-for="Email" disabled>
    </div>

    <div class="form-input">
        <label>
            First name
        </label>
        <input asp-for="FirstName" disabled>
    </div>

    <div class="form-input">
        <label>
            Last name
        </label>
        <input asp-for="LastName" disabled>
    </div>

    <h3>Academia</h3>
    <div class="form-input">
        <label>
            University
        </label>
        <input asp-for="University" disabled>
    </div>

    <div class="form-input">
        <label>
            Degree
        </label>
        <input asp-for="Degree" disabled>
    </div>

    <div class="form-input">
        <label>
            Field
        </label>
        <input asp-for="Field" disabled>
    </div>

    <div class="form-input">
        <label>
            Role
        </label>
        <input asp-for="Role" disabled>
    </div>

    <h3>Personal</h3>
    <div class="form-input">
        <label>
            Bio
        </label>
        <textarea asp-for="Biography" rows="5" disabled></textarea>
    </div>

    <div class="form-input">
        <label>
            Skills
        </label>
        <input asp-for="Skills" disabled>
    </div>
</section>
