@using Ubora.Web.Services
@model Ubora.Web._Features.Users.Profile.ProfilePictureViewModel

<div class="row">
  <div class="col d-flex flex-column align-items-center">
    <img class="avatar" src='@User.GetProfilePictureUrl()' width="250" height="250" />
    <form method="post" enctype="multipart/form-data" asp-controller="Profile" asp-action="ChangeProfilePicture">
        <div class="form-group">
          <label class="custom-file">
            <input class="custom-file-input" asp-for="ProfilePicture">
            <span class="custom-file-control"></span>
          </label>
          <span asp-validation-for="ProfilePicture"></span>
        </div>

        <div class="d-flex justify-content-center">
          <button class="btn btn-primary btn-lg" type="submit">Upload image</button>
        </div>

        @Html.HiddenFor(m => m.IsFirstTimeEditProfile)
    </form>
  </div>
</div>
