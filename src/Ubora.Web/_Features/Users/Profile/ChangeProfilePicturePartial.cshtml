@using Ubora.Web.Services
@model Ubora.Web._Features.Users.Profile.ProfilePictureViewModel

<div class="center-element">
    <img class="avatar" src='@User.GetProfilePictureUrl()' width="300" height="300" />
</div>

<form method="post" enctype="multipart/form-data" asp-controller="Profile" asp-action="ChangeProfilePicture">
    <div class="form-input">
        <label asp-for="ProfilePicture">Upload new image</label>
        <input asp-for="ProfilePicture">
        <span asp-validation-for="ProfilePicture"></span>
    </div>

    <div class="form-input">
        <div class="center-element">
            <button class="button secondary-button small-button" type="submit">Upload image</button>
        </div>
    </div>
    
    @Html.HiddenFor(m => m.CurrentActionName)
</form>
