@using Ubora.Web._Features.Notifications
@model IEnumerable<Ubora.Web._Features.Notifications._Base.INotificationViewModel>

@{
    ViewData["Title"] = "Notification history";
}

<div class="container-fluid my-4">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-lg-8">

      <div class="row">
        <div class="col-sm-12 col-lg-6">
          <h1 class="display-4">History</h1>
        </div>
        <div class="col-sm-12 col-lg-6 d-flex justify-content-end">
          <a class="btn btn-secondary-ghost align-self-start d-sm-block" asp-controller="Notifications" asp-action="Index">
            <i class="material-icons">notifications</i>
            <span>Pending invitations</span>
          </a>
        </div>
      </div>

      <div class="row my-4">
        <div class="col">
          @if (Model.Any())
          {
            foreach (var notification in Model)
            {
              @notification.GetPartialView(Html, true)
            }
          }
          else
          {
            <div class="my-4">
              <p>No history to show.</p>
            </div>
          }
        </div>
      </div>

    </div>
  </div>
</div>
