@model Ubora.Web._Features.Notifications._Base.EventNotificationViewModel

@{
    var isUnreadCss = Model.IsUnread ? "notification-unread" : "";
}

<div class="row notification @isUnreadCss">
    <div class="col-lg-12 px-2">
        <p>In project <a asp-controller="Dashboard" asp-action="Dashboard" asp-route-projectId="@Model.ProjectId">@Model.ProjectTitle</a>, @Model.Message</p>
    </div>    
    <div class="col-lg-12 px-2">
        @Html.TimeAgoHistorySpan(Model.CreatedAt)
    </div>
</div>