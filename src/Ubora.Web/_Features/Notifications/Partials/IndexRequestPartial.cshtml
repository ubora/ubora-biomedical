@using Ubora.Web._Features.Notifications
@using Ubora.Web._Features.Notifications.Requests

@model IndexRequestViewModel

@{
    var isUnreadCss = Model.IsUnread ? "message-unread" : "";
}

<div class="message @isUnreadCss">
    <div class="message-container">
        <p class="message-author-preview">@Model.UserFullName asks to join project <a asp-controller="Dashboard" asp-action="Dashboard" asp-route-projectId="@Model.ProjectId">@Model.ProjectTitle</a></p>

        @Html.Partial("~/_Features/Notifications/Requests/RequestPartial.cshtml", new RequestPartialViewModel {  RequestId = Model.RequestToJoinProjectId, Action = "Accept" })
        @Html.Partial("~/_Features/Notifications/Requests/RequestPartial.cshtml", new RequestPartialViewModel { RequestId = Model.RequestToJoinProjectId, Action = "Decline" })
    </div>
</div>