@model List<Ubora.Web._Features.Admin.UserViewModel>

<div class="container-fluid my-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table class="table table-responsive">
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="w-100">
                                <a asp-controller="Profile" asp-action="ViewProfile" asp-route-userId="@user.UserId">
                                  <span class="d-block">@user.FullName</span>
                                  <span>@user.UserEmail</span>
                                </a>
                            </td>
                            <form method="post">
                                <input type="hidden" name="userId" value="@user.UserId" />
                                <td>
                                    @if (user.IsAdmin)
                                    {
                                        <button class="w-100 btn btn-secondary-ghost" type="submit" asp-action="RemoveAdministratorRole">Remove administrator role</button>
                                    }
                                    else
                                    {
                                        <button class="w-100 btn btn-primary" type="submit" asp-action="AddAdministratorRole">Add administrator role</button>
                                    }
                                </td>
                                <td>
                                    @if (user.IsMentor)
                                    {
                                        <button class="w-100 btn btn-secondary-ghost" type="submit" asp-action="RemoveMentorRole">Remove mentor role</button>
                                    }
                                    else
                                    {
                                        <button class="w-100 btn btn-primary" type="submit" asp-action="AddMentorRole">Add mentor role</button>
                                    }
                                </td>

                            </form>
                            <td>
                                <a class="btn btn-danger" asp-route-userEmail="@user.UserEmail" asp-action="DeleteUser">Delete user</a>
                            </td>
                        </tr>
                        @*<div class="user-role-list">
                            <h4>Roles</h4>
                            @if (user.Roles.Any())
                            {
                              @*TODO: Can be replaced with icons? Each role on new line?*@
                        @*@string.Join(", ", user.Roles)*@
                        @*  }
                            </div>*@
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
