@model Ubora.Web._Features.Admin.UserViewModel

<div class="container-fluid my-4">
    <div class="row">
        <div class="col text-center">

            <h2 class="mb-4">Do you want to remove user  "@Model.UserEmail" </h2>
            <form  asp-action="DeleteUser" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <a class="btn btn-secondary-ghost"  asp-action="Diagnostics">No, cancel</a>
                    <span class="mx-1"></span>
                    <button class="btn btn-primary" asp-route-userEmail="@Model.UserEmail" asp-action="DeleteUser" type="submit">Yes, remove</button>
                </div>
            </form>

        </div>
    </div>
</div>