<div class="container my-5 text-center">
    <h1>@ViewData["Title"]</h1>
    <div class="row justify-content-center my-2">
        <div class="col-lg-4 col-md-6">
            <a class="btn btn-outline-primary btn-block" asp-controller="Admin" asp-action="ManageUsers" role="button">Manage users</a>
        </div>
    </div>
    <div class="row justify-content-center my-2">
        <div class="col-lg-4 col-md-6">
            <a class="btn btn-outline-primary btn-block" asp-controller="Admin" asp-action="ProjectsUnderReview" role="button">View projects under review</a>
        </div>
    </div>
    <div class="row justify-content-center my-2">
        <div class="col-lg-4 col-md-6">
            <a class="btn btn-outline-primary btn-block" asp-controller="Tests" asp-action="RunTests" role="button">Run diagnostics tests</a>
        </div>
    </div>
    <div class="row justify-content-center my-2">
        <div class="col-lg-4 col-md-6">
            <a class="btn btn-outline-primary btn-block" asp-controller="Events" asp-action="Events" role="button">Look at event metadata</a>
        </div>
    </div>
    <div class="row justify-content-center my-2">
        <div class="col-lg-4 col-md-6">
            <a class="btn btn-outline-primary btn-block" asp-controller="Feedback" asp-action="All" role="button">View feedback</a>
        </div>
    </div>
</div>
