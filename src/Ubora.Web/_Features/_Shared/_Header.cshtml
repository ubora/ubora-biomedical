@using Ubora.Web.Data
@using Ubora.Web.Services
@using Ubora.Web._Features.Notifications

@inject SignInManager<ApplicationUser> SignInManager
@inject ApplicationUserManager UserManager

@if (SignInManager.IsSignedIn(User))
{
    <p class="notice-indev">In-development preview</p>
    if (!User.IsEmailConfirmed())
    {
        <p class="notice-account-confirmation">We have sent an email confirmation link to @User.GetEmail()<br><a class="notice-account-confirmation-link" href="@Url.Action("ResendEmailConfirmation", "Account")">Resend confirmation email?</a></p>
    }
}

@if (SignInManager.IsSignedIn(User))
{
    <nav class="header navbar navbar-expand-lg box-shadow">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
            <img id="UboraLogo" src="~/images/icons/ubora-logo.svg" alt="UBORA logo">
        </a>


        <div class="d-flex align-items-center">
            <div class="dropdown show">
                <a class="nav-link nav-link-notification navbar-toggler dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @await Component.InvokeAsync(typeof(UnreadNotificationsViewComponent))
                </a>
                <ul class="dropdown-menu box-shadow" aria-labelledby="dropdownMenuLink">

                    <li>
                        <span class="small">
                            You have <strong>3</strong> new notifications.
                        </span>
                    </li>
                    <li class="dropdown-item">
                        <p>You have been asked to join project <a href="#">Administrator's project</a></p>
                        <form method="post">
                            <button class="btn btn-outline-primary btn-sm">Decline</button>
                            <button class="btn btn-primary btn-sm" type="submit">Accept</button>
                        </form>
                    </li>
                    <li class="dropdown-item">
                        <a asp-controller="Notifications" asp-action="Index">View all</a>
                    </li>
                </ul>
            </div>


            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#headerNavbar" aria-controls="headerNavbar" aria-expanded="false" aria-label="Toggle header navigation">
                <i class="material-icons">menu</i>
            </button>
        </div>

        <div id="headerNavbar" class="collapse navbar-collapse justify-content-end">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" asp-controller="ProjectList" asp-action="Search">
                        <i class="material-icons">search</i>
                        <span class="nav-link-description ml-1">Search</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" asp-controller="UserList" asp-action="Index">
                        <i class="material-icons">people</i>
                        <span class="nav-link-description ml-1">Community</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" asp-controller="ProjectList" asp-action="MyProjects">
                        <i class="material-icons">folder</i>
                        <span class="nav-link-description ml-1">My projects</span>
                    </a>
                </li>
                <li class="nav-item notification-item">
                    <div class="dropdown show">
                        <a class="nav-link nav-link-notification d-flex align-items-center dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @await Component.InvokeAsync(typeof(UnreadNotificationsViewComponent))
                            <span class="nav-link-description ml-1">Notifications</span>
                        </a>
                        <ul class="dropdown-menu box-shadow" aria-labelledby="dropdownMenuLink">

                            <li>
                                <span class="small">
                                    You have <strong>3</strong> new notifications.
                                </span>
                            </li>
                            <li class="dropdown-item">
                                <p>You have been asked to join project <a href="#">Administrator's project</a></p>
                                <form method="post">
                                    <button class="btn btn-outline-primary btn-sm">Decline</button>
                                    <button class="btn btn-primary btn-sm" type="submit">Accept</button>
                                </form>
                            </li>
                            <li class="dropdown-item">
                                <a asp-controller="Notifications" asp-action="Index">View all</a>
                            </li>
                        </ul>
                    </div>
                </li>




                @if (User.IsInRole(ApplicationRole.Admin))
                {
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center" asp-controller="Admin" asp-action="Diagnostics">
                            <i class="material-icons">build</i>
                            <span class="nav-link-description ml-1">Admin</span>
                        </a>
                    </li>
                }

                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" asp-controller="Manage" asp-action="Index">
                        <i class="material-icons">account_circle</i>
                        <span class="nav-link-description ml-1">Profile</span>
                    </a>
                </li>

                <li class="nav-item">
                    <form asp-action="Logout" asp-controller="Account" method="post">
                        <button class="btn btn-link nav-link d-flex align-items-center" type="submit">
                            <i class="material-icons">exit_to_app</i>
                            <span class="ml-1">Log out</span>
                        </button>
                    </form>
                </li>


            </ul>
        </div>
    </nav>
}


else
{
    <nav class="header navbar navbar-expand-lg box-shadow sticky-top">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
            <img id="UboraLogo" src="~/images/icons/ubora-logo.svg" alt="UBORA logo" height="48">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#headerNavbar" aria-controls="headerNavbar" aria-expanded="false" aria-label="Toggle header navigation">
            <i class="material-icons">menu</i>
        </button>
        <div id="headerNavbar" class="collapse navbar-collapse justify-content-end">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" asp-controller="ProjectList" asp-action="Search">
                        <i class="material-icons">search</i>
                        <span class="nav-link-description ml-1">Search</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" asp-controller="UserList" asp-action="Index">
                        <i class="material-icons">people</i>
                        <span class="nav-link-description ml-1">Community</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" id="SignInSignUp" class="nav-link" asp-controller="Account" asp-action="Login">
                        <i class="material-icons">account_circle</i>
                        <span class="nav-link-description ml-1">Log in</span>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
}
