@using Ubora.Web.Data
@using Ubora.Web.Services
@using Ubora.Web._Features.Notifications

@inject SignInManager<ApplicationUser> SignInManager
@inject ApplicationUserManager UserManager

<p class="notice-indev">In-development preview</p>
@if (SignInManager.IsSignedIn(User))
{
  if (!User.IsEmailConfirmed())
  {
      <p class="notice-account-confirmation">We have sent an email confirmation link to @User.GetEmail()<br><a class="notice-account-confirmation-link" href="@Url.Action("ResendEmailConfirmation", "Account")">Resend confirmation email?</a></p>
  }
}

@if (SignInManager.IsSignedIn(User))
{
<nav class="header navbar navbar-toggleable-md sticky-top">
  <a class="navbar-brand" asp-controller="Home" asp-action="Index">
    <img id="UboraLogo" src="~/images/icons/ubora-logo.svg" alt="UBORA logo" height="64">
  </a>
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#headerNavbar" aria-controls="headerNavbar" aria-expanded="false" aria-label="Toggle header navigation">
    <i class="material-icons">menu</i>
  </button>
  <div id="headerNavbar" class="collapse navbar-collapse justify-content-end">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link d-flex align-items-center" asp-controller="ProjectList" asp-action="Search">
          <i class="material-icons">search</i>
          <span class="nav-link-description ml-1">Search</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link d-flex align-items-center" asp-controller="UserList" asp-action="Index">
          <i class="material-icons">people</i>
          <span class="nav-link-description ml-1">Community</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link d-flex align-items-center" asp-controller="ProjectList" asp-action="MyProjects">
          <i class="material-icons">folder</i>
          <span class="nav-link-description ml-1">Projects</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link nav-link-notification d-flex align-items-center" asp-controller="Notifications" asp-action="Index">
          @await Component.InvokeAsync(typeof(UnreadNotificationsViewComponent))
          <span class="nav-link-description ml-1">Notifications</span>
        </a>
      </li>

      @if (User.IsInRole(ApplicationRole.Admin))
      {
      <li class="nav-item">
        <a class="nav-link d-flex align-items-center" asp-controller="Admin" asp-action="Diagnostics">
          <i class="material-icons">build</i>
          <span class="nav-link-description ml-1">Admin</span>
        </a>
      </li>
      }

      <li class="nav-item">
        <a class="nav-link d-flex align-items-center" asp-controller="Manage" asp-action="Index">
          <i class="material-icons">account_circle</i>
          <span class="nav-link-description ml-1">Profile</span>
        </a>
      </li>

      <li class="nav-item">
        <form asp-action="Logout" asp-controller="Account" method="post">
          <button class="btn-link nav-link d-flex align-items-center" type="submit">
            <i class="material-icons">exit_to_app</i>
            <span class="ml-1">Sign out</span>
          </button>
        </form>
      </li>


    </ul>
  </div>
</nav>
}


else
{
<nav class="header navbar navbar-toggleable-md sticky-top">
  <a class="navbar-brand" asp-controller="Home" asp-action="Index">
    <img id="UboraLogo" src="~/images/icons/ubora-logo.svg" alt="UBORA logo" height="64">
  </a>
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#headerNavbar" aria-controls="headerNavbar" aria-expanded="false" aria-label="Toggle header navigation">
    <i class="material-icons">menu</i>
  </button>
  <div id="headerNavbar" class="collapse navbar-collapse justify-content-end">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link d-flex align-items-center" asp-controller="ProjectList" asp-action="Search">
          <i class="material-icons">search</i>
          <span class="nav-link-description ml-1">Search</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link d-flex align-items-center" asp-controller="UserList" asp-action="Index">
          <i class="material-icons">people</i>
          <span class="nav-link-description ml-1">Community</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link d-flex align-items-center" id="SignInSignUp" class="nav-link" asp-controller="Account" asp-action="Login">
          <i class="material-icons">account_circle</i>
          <span class="nav-link-description ml-1">Log in</span>
        </a>
      </li>
    </ul>
  </div>
</nav>
}
