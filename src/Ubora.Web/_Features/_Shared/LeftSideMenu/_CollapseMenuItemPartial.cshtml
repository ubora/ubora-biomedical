@model Ubora.Web._Features._Shared.LeftSideMenu.CollapseMenuItem

<li id="@Model.Id">
    <a href="javascript:void(0)" data-toggle="collapse" aria-expanded="@Model.IsSelected.ToString().ToLower()" data-target=".@Model.InnerMenuItemsId" class="@(Model.ATagClass) @(Model.RenderInnerMenuItems ? "sidemenu-collapse" : "")">
        <i class="material-icons font-weight-bold font-size-1 collapse-icon">arrow_right</i>
        <span>
            @Model.DisplayName
        </span>

    </a>

    @if (Model.RenderInnerMenuItems)
    {
        <ul class="collapse @(Model.IsSelected ? "show" : "") @(Model.CssClassForItemsBelow) @Model.InnerMenuItemsId">
            @foreach (var innerMenuItem in Model.InnerMenuItems)
            {
                @Html.Partial("_SideMenuItemPartial.cshtml", innerMenuItem);
            }
        </ul>
    }
</li>