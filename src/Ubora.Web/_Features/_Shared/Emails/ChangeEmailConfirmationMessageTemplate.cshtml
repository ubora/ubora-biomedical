@model Ubora.Web._Features._Shared.Emails.ChangeEmailConfirmationViewModel
@{
        var confirmationUrl = Html.Raw(Url.Action("ConfirmChangeEmail", "Manage", new { userId = Model.UserId, code = Model.Code, newEmail = Model.NewEmail }, Context.Request.Scheme));
}

@{
    Layout = "_EmailLayout";
}

<table width="100%">
    <tr>
        <td class="heading-tertiary">
            Email address change
        </td>
    </tr>

    <tr>
        <td class="paragraph">
            You requested that your email address be changed to "@Model.NewEmail". Note that email address is the credential used for logging into UBORA.
        </td>
    </tr>

    <tr>
        <td class="paragraph">
            If you did not make this request, please contact us. Otherwise please confirm your new email by clicking the button below:
        </td>
    </tr>
    <tr>
        <td align="center">
            <table>
                <tr>
                    <td class="button">
                        <a href="@confirmationUrl" class="button-text" target="_blank">
                            <strong style="text-decoration:none; color:#FFFFFF;">Confirm email change</strong>
                        </a>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
