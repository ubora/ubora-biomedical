@model Ubora.Web._Features._Shared.Emails.EmailConfirmationEmailViewModel
@{
    var confirmationUrl = Html.Raw(Url.Action("ConfirmEmail", "Account", new { userId = Model.UserId, Model.Code }, Context.Request.Scheme));
}

@{
    Layout = "_EmailLayout";
}

<table width="100%">

    <tr>
        <td class="heading-secondary">
           Welcome to UBORA!
        </td>
    </tr>

    <tr>
        <td class="heading-tertiary">
            Email confirmation
        </td>
    </tr>

    <tr>
        <td class="paragraph">
            Confirming your email address improves account security, and ensures you can recover your account if you forgot your password.
        </td>
    </tr>
    <tr>
        <td class="paragraph">
            Please confirm your email by clicking the button below:
        </td>
    </tr>
    <tr>
        <td align="center">
            <table>
                <tr>
                    <td class="button">
                        <a href="@confirmationUrl" class="button-text" target="_blank">
                            <strong style="text-decoration:none; color:#FFFFFF;">Confirm your email</strong>
                        </a>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td class="paragraph">
            If the button does not work, please confirm your email by clicking here on the following link or copy-paste it in your browser:
        </td>
    </tr>
    <tr>
      <td class="link">
            <a href="@confirmationUrl">@confirmationUrl</a>
      </td>
    </tr>
</table>
