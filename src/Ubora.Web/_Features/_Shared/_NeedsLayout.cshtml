@using Ubora.Domain.Infrastructure.Specifications
@using Ubora.Domain.Resources

<!DOCTYPE html>
<html lang="en">
<head>
    @RenderSection("Head", required: false)
    @{
        Html.RenderPartial("_LayoutHead");
    }
    <link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
</head>

<body>
    @{
        Html.RenderPartial("_Header");
    }
    <main>
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-2 col-lg-12 py-xl-3 pb-3 border-right h-min-xl-100-footer">
                    @{
                        var leftSection = RenderSection("Left", required: false);
                        if (leftSection != null)
                        {
                            @leftSection
                        }
                        else
                        {
                            <form>
                                <div class="form-group mt-xl-0 mt-3">
                                    <input placeholder="Search..." class="form-control" type="text" />
                                </div>
                            </form>
                        }
                    }
                </div>
                <div class="col-xl-8 col-lg-8 py-xl-3 px-xl-9 pb-3 order-lg-1 order-2">
                    @RenderBody()
                </div>
                <div class="col-xl-2 py-xl-3 col-lg-4 order-lg-2 order-1 pb-3 @(IsSectionDefined("Right") ? "border-left" : "")" >
                    @RenderSection("Right", required: false)
                </div>
            </div>
        </div>
    </main>

    @{
        Html.RenderPartial("_Footer");
        Html.RenderPartial("_LayoutBody");
    }
    @RenderSection("Scripts", required: false)
</body>
</html>